{% comment %}
  Product Features Section
  Displays product features with customizable left/right layout using blocks
{% endcomment %}

<style>
/* Product Features Section Styles */
#shopify-section-{{ section.id }} .product-features {
  padding: 4rem 0;
  background-color: {{ section.settings.background_color }};
}

.shopify-section.section.section-product-features{
  background-color: {{ section.settings.background_color }};
}
/* #shopify-section-{{ section.id }} .product-features__container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
} */

#shopify-section-{{ section.id }} .product-features__item {
  display: flex;
  align-items: center;
  gap: 4rem;
  margin-bottom: 4rem;
}

#shopify-section-{{ section.id }} .product-features__item:last-child {
  margin-bottom: 0;
}

/* Layout Control - Desktop */
#shopify-section-{{ section.id }} .product-features__item--left .product-features__images {
  order: 1;
}

#shopify-section-{{ section.id }} .product-features__item--left .product-features__content {
  order: 2;
}

#shopify-section-{{ section.id }} .product-features__item--right .product-features__images {
  order: 2;
}

#shopify-section-{{ section.id }} .product-features__item--right .product-features__content {
  order: 1;
}

/* Images Container */
#shopify-section-{{ section.id }} .product-features__images {
  display: flex;
  gap: 1rem;
  flex: 1;
  min-width: 0;
}

#shopify-section-{{ section.id }} .product-features__image-wrapper {
  flex: 1;
  position: relative;
  overflow: hidden;
  background-color: #f0f0f0;
}

#shopify-section-{{ section.id }} .product-features__image-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  display: block;
}

/* Content Block */
#shopify-section-{{ section.id }} .product-features__content {
  flex: 1;
  min-width: 0;
}

#shopify-section-{{ section.id }} .product-features__header {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1.5rem;
}

#shopify-section-{{ section.id }} .product-features__icon {
  width: 40px;
  height: 40px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

#shopify-section-{{ section.id }} .product-features__icon svg {
  width: 100%;
  height: 100%;
  max-width: 40px;
  max-height: 40px;
}

#shopify-section-{{ section.id }} .product-features__title {
  font-size: 1.25rem;
  font-weight: 600;
  margin: 0;
  color: #1a1a1a;
  line-height: 1.3;
}

#shopify-section-{{ section.id }} .product-features__description {
  color: #4a4a4a;
  line-height: 1.6;
  margin-bottom: 1rem;
  font-size: 0.95rem;
}

#shopify-section-{{ section.id }} .product-features__list {
  list-style: none;
  padding: 0;
  margin: 0;
}

#shopify-section-{{ section.id }} .product-features__list-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 0.75rem;
  color: #4a4a4a;
  line-height: 1.5;
  font-size: 0.9rem;
}

#shopify-section-{{ section.id }} .product-features__list-item::before {
  content: "â€¢";
  margin-right: 0.75rem;
  color: #1a1a1a;
  font-weight: bold;
  flex-shrink: 0;
}

/* Responsive Design - Tablet */
@media screen and (max-width: 989px) {
  #shopify-section-{{ section.id }} .product-features {
    padding: 3rem 0;
  }

  #shopify-section-{{ section.id }} .product-features__container {
    padding: 0 1.5rem;
  }

  #shopify-section-{{ section.id }} .product-features__item {
    gap: 2.5rem;
    margin-bottom: 3rem;
  }

  #shopify-section-{{ section.id }} .product-features__title {
    font-size: 1.15rem;
  }

  #shopify-section-{{ section.id }} .product-features__icon {
    width: 36px;
    height: 36px;
  }
}

/* Responsive Design - Mobile */
@media screen and (max-width: 749px) {
  #shopify-section-{{ section.id }} .product-features {
    padding: 2rem 0;
  }

  #shopify-section-{{ section.id }} .product-features__container {
    padding: 0 1rem;
  }

  #shopify-section-{{ section.id }} .product-features__item {
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 2.5rem;
  }

  /* Force content first, images second on mobile */
  #shopify-section-{{ section.id }} .product-features__content {
    order: 1 !important;
  }

  #shopify-section-{{ section.id }} .product-features__images {
    order: 2 !important;
    width: 100%;
  }

  #shopify-section-{{ section.id }} .product-features__header {
    margin-bottom: 1rem;
  }

  #shopify-section-{{ section.id }} .product-features__icon {
    width: 32px;
    height: 32px;
  }

  #shopify-section-{{ section.id }} .product-features__title {
    font-size: 1.1rem;
  }

  #shopify-section-{{ section.id }} .product-features__description {
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
  }

  #shopify-section-{{ section.id }} .product-features__list-item {
    font-size: 0.85rem;
    margin-bottom: 0.5rem;
  }
}

/* Small Mobile */
@media screen and (max-width: 480px) {
  #shopify-section-{{ section.id }} .product-features {
    padding: 1.5rem 0;
  }

  #shopify-section-{{ section.id }} .product-features__images {
    flex-direction: column;
    gap: 0.75rem;
  }

  #shopify-section-{{ section.id }} .product-features__title {
    font-size: 1rem;
  }

  #shopify-section-{{ section.id }} .product-features__description {
    font-size: 0.875rem;
  }
}
</style>

<div class="product-features">
  <div class="product-features__container">
    {% for block in section.blocks %}
      <div class="product-features__item product-features__item--{{ block.settings.layout }}" {{ block.shopify_attributes }}>
        
        <!-- Images Container -->
        <div class="product-features__images">
          {% if block.settings.image_1 != blank %}
            <div class="product-features__image-wrapper">
              {{
                block.settings.image_1
                | image_url: width: 800
                | image_tag:
                  loading: 'lazy',
                  alt: block.settings.image_1.alt,
                  widths: '375, 550, 750, 1100, 1500'
              }}
            </div>
          {% endif %}
          
          {% if block.settings.image_2 != blank %}
            <div class="product-features__image-wrapper">
              {{
                block.settings.image_2
                | image_url: width: 800
                | image_tag:
                  loading: 'lazy',
                  alt: block.settings.image_2.alt,
                  widths: '375, 550, 750, 1100, 1500'
              }}
            </div>
          {% endif %}
        </div>

        <!-- Content Block -->
        <div class="product-features__content">
          <div class="product-features__header">
            {% if block.settings.custom_svg != blank %}
              <div class="product-features__icon">
                {{ block.settings.custom_svg }}
              </div>
            {% endif %}
            
            {% if block.settings.title != blank %}
              <h3 class="product-features__title">{{ block.settings.title }}</h3>
            {% endif %}
          </div>

          {% if block.settings.description != blank %}
            <div class="product-features__description">
              {{ block.settings.description }}
            </div>
          {% endif %}

          {% if block.settings.list_items != blank %}
            <ul class="product-features__list">
              {% assign items = block.settings.list_items | split: '||' %}
              {% for item in items %}
                {% if item != blank %}
                  <li class="product-features__list-item">{{ item | strip }}</li>
                {% endif %}
              {% endfor %}
            </ul>
          {% endif %}
        </div>

      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Product Features",
  "tag": "section",
  "class": "section section-product-features",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f5f5f5"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Item",
      "settings": [
        {
          "type": "select",
          "id": "layout",
          "label": "Layout (Desktop)",
          "options": [
            {
              "value": "left",
              "label": "Images Left"
            },
            {
              "value": "right",
              "label": "Images Right"
            }
          ],
          "default": "left",
          "info": "On mobile, content will always appear first"
        },
        {
          "type": "header",
          "content": "Images"
        },
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "Image 1"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "Image 2"
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "html",
          "id": "custom_svg",
          "label": "Custom SVG Icon",
          "info": "Paste your SVG code here. Example: <svg>...</svg>"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "info": "Short description text"
        },
        {
          "type": "textarea",
          "id": "list_items",
          "label": "List Items",
          "info": "Separate each item with || (double pipe). Example: Item 1||Item 2||Item 3"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "layout": "left",
            "title": "High-end texture"
          }
        },
        {
          "type": "feature",
          "settings": {
            "layout": "right",
            "title": "Multifunctional dimming"
          }
        }
      ]
    }
  ]
}
{% endschema %}
