<div class="product-carousel {% if section.settings.custom_class != blank %}{{ section.settings.custom_class }}{% endif %}" id="carousel-{{ section.id }}">
  <div class="product-carousel__container">
    <div class="product-carousel__wrapper">
      
      <div class="product-carousel__scroller" data-carousel-scroller>
        {% comment %}Repeat slides 5 times for seamless infinite loop{% endcomment %}
        {% for i in (1..5) %}
          {% for block in section.blocks %}
            {% if block.type == 'slide' %}
              {% assign slide_index = forloop.index0 | plus: section.blocks.size | times: i | minus: section.blocks.size %}
              <div class="product-carousel__slide" data-slide-index="{{ slide_index }}" data-original-index="{{ forloop.index0 }}">
                <div class="product-carousel__slide-inner" data-slide-inner>
                  {% if block.settings.image != blank %}
                    {{ block.settings.image | image_url: width: 1200 | image_tag: 
                       alt: block.settings.image.alt,
                       class: 'product-carousel__image',
                       loading: 'lazy' }}
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'product-carousel__image' }}
                  {% endif %}
                  
                  <!-- Zoom Button -->
                  <button 
                    class="product-carousel__zoom-btn"
                    data-zoom-btn
                    aria-label="Zoom image"
                  >
                
                      <svg width="43" height="42" viewBox="0 0 43 42" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                      <rect x="0.909912" width="41.59" height="41.59" fill="url(#pattern0_1_544)"/>
                      <defs>
                      <pattern id="pattern0_1_544" patternContentUnits="objectBoundingBox" width="1" height="1">
                      <use xlink:href="#image0_1_544" transform="scale(0.0178571)"/>
                      </pattern>
                      <image id="image0_1_544" width="56" height="56" preserveAspectRatio="none" xlink:href="data:image/png;base64,"/>
                      </defs>
                      </svg>

                  </button>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        {% endfor %}
      </div>
      
      <!-- Navigation Buttons -->
      <div class="product-carousel__nav product-carousel__nav--prev">
        <button 
          class="product-carousel__nav-btn"
          data-nav-prev
          aria-label="Previous slide"
        >
          <svg class="product-carousel__nav-icon product-carousel__nav-icon--prev" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 5L16 12L9 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
      
      <div class="product-carousel__nav product-carousel__nav--next">
        <button 
          class="product-carousel__nav-btn"
          data-nav-next
          aria-label="Next slide"
        >
          <svg class="product-carousel__nav-icon product-carousel__nav-icon--next" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 5L16 12L9 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
      
      <!-- Slide Counter -->
      {% if section.settings.show_counter %}
        <div class="product-carousel__counter">
          <span class="product-carousel__counter-current" data-current-slide>1</span>
          <span> / {{ section.blocks.size }}</span>
        </div>
      {% endif %}
      
    </div>
  </div>
  
  <!-- Zoom Overlay -->
  <div class="product-carousel__zoom-overlay" data-zoom-overlay></div>
  
  <!-- Zoom Image Container -->
  <div class="product-carousel__zoom-container" data-zoom-container></div>
  
  <!-- Close Button for Zoom -->
  <button class="product-carousel__close-btn" data-zoom-close aria-label="Close zoom">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>
</div>

<script>
(function() {
  const carousel = document.getElementById('carousel-{{ section.id }}');
  if (!carousel) return;
  
  const scroller = carousel.querySelector('[data-carousel-scroller]');
  const prevBtn = carousel.querySelector('[data-nav-prev]');
  const nextBtn = carousel.querySelector('[data-nav-next]');
  const counterEl = carousel.querySelector('[data-current-slide]');
  const allSlides = carousel.querySelectorAll('.product-carousel__slide');
  const zoomOverlay = carousel.querySelector('[data-zoom-overlay]');
  const zoomContainer = carousel.querySelector('[data-zoom-container]');
  const closeBtn = carousel.querySelector('[data-zoom-close]');
  
  // Calculate the original number of slides (before multiplication)
  const originalSlideCount = {{ section.blocks.size }};
  const totalRepeats = 5;
  const totalSlides = allSlides.length;
  
  let currentIndex = 0;
  let isScrolling = false;
  
  // Initialize - scroll to middle set of slides
  function init() {
    // Start from the middle set (3rd set out of 5)
    const middleSetStart = originalSlideCount * 2;
    currentIndex = middleSetStart;
    
    // Scroll to middle without animation
    const targetSlide = allSlides[currentIndex];
    if (targetSlide) {
      targetSlide.scrollIntoView({ behavior: 'instant', block: 'nearest', inline: 'center' });
    }
    
    updateCounter();
    updateActiveSlide();
  }
  
  // Scroll to specific slide
  function scrollToSlide(index, instant = false) {
    currentIndex = index;
    
    const slide = allSlides[currentIndex];
    if (slide) {
      slide.scrollIntoView({ behavior: instant ? 'instant' : 'smooth', block: 'nearest', inline: 'center' });
    }
    
    updateCounter();
    updateActiveSlide();
    
    // Check if we need to loop seamlessly
    setTimeout(() => {
      checkAndLoop();
    }, instant ? 0 : 500);
  }
  
  // Check if we're at the edge and need to loop
  function checkAndLoop() {
    // If we're in the first set, jump to the 3rd set
    if (currentIndex < originalSlideCount) {
      const newIndex = currentIndex + (originalSlideCount * 2);
      const targetSlide = allSlides[newIndex];
      if (targetSlide) {
        targetSlide.scrollIntoView({ behavior: 'instant', block: 'nearest', inline: 'center' });
        currentIndex = newIndex;
      }
    }
    // If we're in the last set, jump to the 3rd set
    else if (currentIndex >= originalSlideCount * 4) {
      const newIndex = currentIndex - (originalSlideCount * 2);
      const targetSlide = allSlides[newIndex];
      if (targetSlide) {
        targetSlide.scrollIntoView({ behavior: 'instant', block: 'nearest', inline: 'center' });
        currentIndex = newIndex;
      }
    }
  }
  
  // Update counter (show position within original slide set)
  function updateCounter() {
    if (counterEl) {
      const displayIndex = (currentIndex % originalSlideCount) + 1;
      counterEl.textContent = displayIndex;
    }
  }
  
  // Update active slide class
  function updateActiveSlide() {
    allSlides.forEach((slide, index) => {
      if (index === currentIndex) {
        slide.classList.add('active');
      } else {
        slide.classList.remove('active');
      }
    });
  }
  
  // Previous slide
  function prevSlide() {
    scrollToSlide(currentIndex - 1);
  }
  
  // Next slide
  function nextSlide() {
    scrollToSlide(currentIndex + 1);
  }
  
  // Event listeners for navigation
  if (prevBtn) {
    prevBtn.addEventListener('click', prevSlide);
  }
  
  if (nextBtn) {
    nextBtn.addEventListener('click', nextSlide);
  }
  
  // Zoom functionality
  const slideInners = carousel.querySelectorAll('[data-slide-inner]');
  const zoomBtns = carousel.querySelectorAll('[data-zoom-btn]');
  
  // Function to zoom in
  function zoomIn(slideInner) {
    if (slideInner && zoomContainer) {
      console.log('Zooming in...', slideInner);
      
      // Find the image in the slide
      const img = slideInner.querySelector('.product-carousel__image');
      if (!img) return;
      
      // Clone the image and add it to zoom container
      const imgClone = img.cloneNode(true);
      zoomContainer.innerHTML = '';
      zoomContainer.appendChild(imgClone);
      
      // Show zoom elements
      zoomContainer.classList.add('active');
      if (zoomOverlay) zoomOverlay.classList.add('active');
      if (closeBtn) closeBtn.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
  }
  
  // Click on zoom button - match button to its parent slide-inner
  zoomBtns.forEach((btn) => {
    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      e.preventDefault();
      console.log('Zoom button clicked');
      // Find the parent slide-inner of this button
      const parentSlideInner = btn.closest('[data-slide-inner]');
      console.log('Found parent:', parentSlideInner);
      if (parentSlideInner) {
        zoomIn(parentSlideInner);
      }
    });
  });
  
  // Click on slide image to zoom (desktop only)
  slideInners.forEach((slideInner) => {
    slideInner.addEventListener('click', (e) => {
      // Don't zoom if clicking on the zoom button
      if (e.target.closest('[data-zoom-btn]')) return;
      
      // Only zoom if not already zoomed and on desktop (screen width > 749px)
      const isDesktop = window.innerWidth > 749;
      if (isDesktop) {
        zoomIn(slideInner);
      }
    });
  });
  
  // Close zoom
  function closeZoom() {
    if (zoomContainer) {
      zoomContainer.classList.remove('active');
      zoomContainer.innerHTML = '';
    }
    if (zoomOverlay) zoomOverlay.classList.remove('active');
    if (closeBtn) closeBtn.classList.remove('active');
    document.body.style.overflow = '';
  }
  
  if (closeBtn) {
    closeBtn.addEventListener('click', closeZoom);
  }
  
  if (zoomOverlay) {
    zoomOverlay.addEventListener('click', closeZoom);
  }
  
  // Close zoom on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeZoom();
    }
  });
  
  // Track scroll position for counter update
  let scrollTimeout;
  scroller.addEventListener('scroll', () => {
    clearTimeout(scrollTimeout);
    scrollTimeout = setTimeout(() => {
      // Find the most centered slide
      const scrollerRect = scroller.getBoundingClientRect();
      const scrollerCenter = scrollerRect.left + scrollerRect.width / 2;
      
      let closestSlide = null;
      let closestDistance = Infinity;
      
      allSlides.forEach((slide, index) => {
        const slideRect = slide.getBoundingClientRect();
        const slideCenter = slideRect.left + slideRect.width / 2;
        const distance = Math.abs(slideCenter - scrollerCenter);
        
        if (distance < closestDistance) {
          closestDistance = distance;
          closestSlide = index;
        }
      });
      
      if (closestSlide !== null && closestSlide !== currentIndex) {
        currentIndex = closestSlide;
        updateCounter();
        updateActiveSlide();
        checkAndLoop();
      }
    }, 150);
  });
  
  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') {
      prevSlide();
    } else if (e.key === 'ArrowRight') {
      nextSlide();
    }
  });
  
  // Touch swipe support
  let touchStartX = 0;
  let touchEndX = 0;
  
  scroller.addEventListener('touchstart', (e) => {
    touchStartX = e.changedTouches[0].screenX;
  });
  
  scroller.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
  });
  
  function handleSwipe() {
    const swipeThreshold = 50;
    if (touchStartX - touchEndX > swipeThreshold) {
      nextSlide();
    } else if (touchEndX - touchStartX > swipeThreshold) {
      prevSlide();
    }
  }
  
  {% if section.settings.autoplay %}
  // Autoplay
  let autoplayInterval;
  function startAutoplay() {
    autoplayInterval = setInterval(() => {
      nextSlide();
    }, {{ section.settings.autoplay_speed }} * 1000);
  }
  
  function stopAutoplay() {
    clearInterval(autoplayInterval);
  }
  
  carousel.addEventListener('mouseenter', stopAutoplay);
  carousel.addEventListener('mouseleave', startAutoplay);
  
  startAutoplay();
  {% endif %}
  
  // Initialize carousel
  init();
})();
</script>

