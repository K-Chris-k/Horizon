{% comment %}
  Product Carousel Section
  A carousel with navigation buttons, zoom functionality, and infinite loop
{% endcomment %}

<style>
/* Product Carousel Container */
#shopify-section-{{ section.id }} .product-carousel {
  padding: 3rem 0;
  background-color: {{ section.settings.background_color }};
  overflow: hidden;
}

#shopify-section-{{ section.id }} .product-carousel__container {
  max-width: 100%;
  margin: 0 auto;
  position: relative;
}



/* Scroller */
#shopify-section-{{ section.id }} .product-carousel__scroller {
  display: flex;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  -ms-overflow-style: none;
  gap: 1.5rem;

}

#shopify-section-{{ section.id }} .product-carousel__scroller::-webkit-scrollbar {
  display: none;
}

/* Slide Items */
#shopify-section-{{ section.id }} .product-carousel__slide {
  flex: 0 0 25%;
  scroll-snap-align: center;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

#shopify-section-{{ section.id }} .product-carousel__slide-inner {
  position: relative;
  width: 100%;
  border-radius: {{ section.settings.image_border_radius }}px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: all 0.3s ease;
}

#shopify-section-{{ section.id }} .product-carousel__image {
  width: 100%;
  height: auto;
  display: block;
  object-fit: cover;
  aspect-ratio: {{ section.settings.image_aspect_ratio }};
  transition: transform 0.4s ease;
}

/* Zoom Container */
#shopify-section-{{ section.id }} .product-carousel__zoom-container {
  display: none;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 10001;
  width: 90vw;
  height: 90vh;
  align-items: center;
  justify-content: center;
}

#shopify-section-{{ section.id }} .product-carousel__zoom-container.active {
  display: flex;
}

#shopify-section-{{ section.id }} .product-carousel__zoom-container img {
  max-width: 100%;
  max-height: 100%;
  width: auto;
  height: auto;
  object-fit: contain;
  display: block;
}

/* Zoom Overlay */
#shopify-section-{{ section.id }} .product-carousel__zoom-overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  z-index: 10000;
}

#shopify-section-{{ section.id }} .product-carousel__zoom-overlay.active {
  display: block;
}

/* Zoom Button */
#shopify-section-{{ section.id }} .product-carousel__zoom-btn {
  position: absolute;
  top: 1rem;
  right: 1rem;
  width: 40px;
  height: 40px;
  background: rgba(255, 255, 255, 0.9);
  border: none;
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  z-index: 1;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  opacity: 0;
  pointer-events: none;
}

/* Show zoom button on all slides */
#shopify-section-{{ section.id }} .product-carousel__slide .product-carousel__zoom-btn {
  opacity: 1;
  pointer-events: auto;
}

#shopify-section-{{ section.id }} .product-carousel__zoom-btn:hover {
  background: rgba(255, 255, 255, 1);
  transform: scale(1.1);
}

#shopify-section-{{ section.id }} .product-carousel__zoom-icon {
  width: 20px;
  height: 20px;
  stroke: #333;
}

/* Hide zoom button when image is zoomed */
#shopify-section-{{ section.id }} .product-carousel__slide-inner.zoomed .product-carousel__zoom-btn {
  opacity: 0;
  pointer-events: none;
}

/* Close Button for Zoom */
#shopify-section-{{ section.id }} .product-carousel__close-btn {
  display: none;
  position: fixed;
  top: 2rem;
  right: 10rem;
  width: 50px;
  height: 50px;
  background: rgba(255, 255, 255, 0.9);
  border: none;
  border-radius: 50%;
  cursor: pointer;
  align-items: center;
  justify-content: center;
  z-index: 10002;
  transition: all 0.3s ease;
}

#shopify-section-{{ section.id }} .product-carousel__close-btn.active {
  display: flex;
}

#shopify-section-{{ section.id }} .product-carousel__close-btn:hover {
  background: #fff;
  transform: rotate(90deg);
}

/* Navigation Buttons */
#shopify-section-{{ section.id }} .product-carousel__nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1;
}

#shopify-section-{{ section.id }} .product-carousel__nav--prev {
  left: 2rem;
}

#shopify-section-{{ section.id }} .product-carousel__nav--next {
  right: 2rem;
}

#shopify-section-{{ section.id }} .product-carousel__nav-btn {
  width: 50px;
  height: 50px;
  background: rgba(255, 255, 255, 0.95);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.15);
}

#shopify-section-{{ section.id }} .product-carousel__nav-btn:hover {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.25);
  transform: scale(1.1);
