<style>
  /* Section Container */
  #shopify-section-{{ section_id }} .smart-features-{{ section_id }} {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section_id }} .smart-features-{{ section_id }} {
      padding: {{ section.settings.padding_top_desktop }}px 0 {{ section.settings.padding_bottom_desktop }}px;
    }
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__container {
      padding: 0 40px;
    }
  }

  /* Header Section */
  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__header {
    text-align: center;
    margin-bottom: {{ section.settings.header_margin_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__header {
      margin-bottom: {{ section.settings.header_margin_desktop }}px;
    }
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__title {
    font-size: {{ section.settings.title_font_size_mobile }}px;
    font-weight: {{ section.settings.title_font_weight }};
    line-height: {{ section.settings.title_line_height_mobile }};
    color: {{ section.settings.title_color }};
    margin: 0 0 {{ section.settings.link_margin_mobile }}px 0;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__title {
      font-size: {{ section.settings.title_font_size_desktop }}px;
      line-height: {{ section.settings.title_line_height_desktop }};
      margin-bottom: {{ section.settings.link_margin_desktop }}px;
    }
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: {{ section.settings.link_font_size_mobile }}px;
    color: {{ section.settings.link_color }};
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__link {
      font-size: {{ section.settings.link_font_size_desktop }}px;
    }
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__link:hover {
    opacity: 0.7;
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__link-arrow {
    transition: transform 0.3s ease;
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__link:hover .smart-features-{{ section_id }}__link-arrow {
    transform: translateX(4px);
  }

  /* Features Grid - Desktop at top, Mobile at bottom */
  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: {{ section.settings.features_gap_mobile }}px;
    margin-bottom: {{ section.settings.features_margin_mobile }}px;
    margin-top: 30px;
    order: 2;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__features {
      grid-template-columns: repeat({{ section.settings.features_columns_desktop }}, 1fr);
      gap: {{ section.settings.features_gap_desktop }}px;
      margin-bottom: {{ section.settings.features_margin_desktop }}px;
      order: 1;
    }
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__feature-item {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ section.settings.feature_icon_text_gap }}px;
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__feature-icon {
    width: {{ section.settings.icon_size_mobile }}px;
    height: {{ section.settings.icon_size_mobile }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__feature-icon {
      width: {{ section.settings.icon_size_desktop }}px;
      height: {{ section.settings.icon_size_desktop }}px;
    }
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__feature-icon img,
  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__feature-icon svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__feature-text {
    font-size: {{ section.settings.feature_text_font_size_mobile }}px;
    line-height: {{ section.settings.feature_text_line_height_mobile }};
    color: {{ section.settings.feature_text_color }};
    margin: 0;
    max-width: 200px;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__feature-text {
      font-size: {{ section.settings.feature_text_font_size_desktop }}px;
      line-height: {{ section.settings.feature_text_line_height_desktop }};
    }
  }

  /* Content Box with Image Overlay */
  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__content {
    order: 1;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__content {
      order: 2;
      width: 1000px;
      margin: 0 auto;
    }
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__content-wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__content-wrapper {
      flex-direction: row;
      align-items: flex-start;
      gap: 40px;
    }
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__content-image {
    width: {{ section.settings.content_image_width_mobile }}px;
    height: auto;
    flex-shrink: 0;
    z-index: 2;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__content-image {
      width: {{ section.settings.content_image_width_desktop }}px;
      position: absolute;
      left: {{ section.settings.content_image_offset_desktop }}px;
      top: 20%;
      transform: translateY(-50%);
    }
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__content-image img {
    width: 100%;
    height: auto;
    display: block;
    filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.1));
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__content-box {
    background-color: {{ section.settings.content_box_background }};
    border: {{ section.settings.content_box_border_width }}px solid {{ section.settings.content_box_border_color }};
    border-radius: {{ section.settings.content_box_border_radius }}px;
    box-shadow: {{ section.settings.content_box_shadow }};
    padding: {{ section.settings.content_box_padding_mobile }}px;
    width: 100%;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__content-box {
      padding: {{ section.settings.content_box_padding_desktop }}px;
      padding-left: calc({{ section.settings.content_image_width_desktop }}px + {{ section.settings.content_image_offset_desktop }}px + {{ section.settings.content_box_padding_desktop }}px);
    }
    #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__content-box p {
      margin: 0;
    }
  }

  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__content-text {
    font-size: {{ section.settings.content_text_font_size_mobile }}px;
    line-height: {{ section.settings.content_text_line_height_mobile }};
    color: {{ section.settings.content_text_color }};
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__content-text {
      font-size: {{ section.settings.content_text_font_size_desktop }}px;
      line-height: {{ section.settings.content_text_line_height_desktop }};
    }
  }

  /* Mobile layout wrapper */
  #shopify-section-{{ section_id }} .smart-features-{{ section_id }}__layout {
    display: flex;
    flex-direction: column;
  }
</style>

<div class="smart-features-{{ section_id }} {{ section.settings.custom_class }}">
  <div class="smart-features-{{ section_id }}__container">
    
    {%- comment -%} Header: Title and Learn More Link {%- endcomment -%}
    {% if section.settings.title != blank or section.settings.link_text != blank %}
      <div class="smart-features-{{ section_id }}__header">
        {% if section.settings.title != blank %}
          <h2 class="smart-features-{{ section_id }}__title">
            {{ section.settings.title }}
          </h2>
        {% endif %}

        {% if section.settings.link_text != blank and section.settings.link_url != blank %}
          <a 
            href="{{ section.settings.link_url }}" 
            class="smart-features-{{ section_id }}__link"
            {% if section.settings.link_open_new_window %}target="_blank" rel="noopener noreferrer"{% endif %}
            onclick="window.scrollTo(0, 0);"
          >
            <span>{{ section.settings.link_text }}</span>
            <span class="smart-features-{{ section_id }}__link-arrow">â€º</span>
          </a>
        {% endif %}
      </div>
    {% endif %}

    <div class="smart-features-{{ section_id }}__layout">
      {%- comment -%} Feature Blocks {%- endcomment -%}
      {% if section.blocks.size > 0 %}
        <div class="smart-features-{{ section_id }}__features">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <div class="smart-features-{{ section_id }}__feature-item" {{ block.shopify_attributes }}>
                {% if block.settings.icon != blank %}
                  <div class="smart-features-{{ section_id }}__feature-icon">
                    {{
                      block.settings.icon
                      | image_url: width: 200
                      | image_tag:
                        loading: 'lazy',
                        alt: block.settings.text | escape
                    }}
                  </div>
                {% endif %}
                
                {% if block.settings.text != blank %}
                  <p class="smart-features-{{ section_id }}__feature-text">
                    {{ block.settings.text }}
                  </p>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}

      {%- comment -%} Content Box with Image {%- endcomment -%}
      {% if section.settings.content_text != blank or section.settings.content_image != blank %}
        <div class="smart-features-{{ section_id }}__content">
          <div class="smart-features-{{ section_id }}__content-wrapper">
            {% if section.settings.content_image != blank %}
              <div class="smart-features-{{ section_id }}__content-image">
                {{
                  section.settings.content_image
                  | image_url: width: 600
                  | image_tag:
                    loading: 'lazy',
                    alt: section.settings.content_image.alt | default: section.settings.title,
                    widths: '200, 300, 400, 500, 600'
                }}
              </div>
            {% endif %}

            {% if section.settings.content_text != blank %}
              <div class="smart-features-{{ section_id }}__content-box">
                <p class="smart-features-{{ section_id }}__content-text">
                  {{ section.settings.content_text }}
                </p>
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>

  </div>
</div>

