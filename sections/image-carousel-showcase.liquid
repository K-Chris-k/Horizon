    }
  }

  /* Focus styles for accessibility */
  #shopify-section-{{ section.id }} .img-carousel-showcase__arrow:focus-visible,
  #shopify-section-{{ section.id }} .img-carousel-showcase__zoom-close:focus-visible {
    outline: 2px solid #0066cc;
    outline-offset: 2px;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__slide:focus-visible {
    outline: 2px solid #0066cc;
    outline-offset: 4px;
    border-radius: 12px;
  }
</style>

<section class="img-carousel-showcase" data-section-id="{{ section.id }}">
  <div class="img-carousel-showcase__container">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <header class="img-carousel-showcase__header">
        {% if section.settings.title != blank %}
          <h2 class="img-carousel-showcase__title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="img-carousel-showcase__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </header>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="img-carousel-showcase__carousel-wrapper">
        <div class="img-carousel-showcase__carousel" id="carousel-{{ section.id }}" role="region" aria-label="{{ section.settings.title | default: 'Image carousel' }}">
          {% for block in section.blocks %}
            <div 
              class="img-carousel-showcase__slide {% if forloop.first %}img-carousel-showcase__slide--center{% else %}img-carousel-showcase__slide--hidden{% endif %}"
              data-slide-index="{{ forloop.index0 }}"
              data-block-id="{{ block.id }}"
              {{ block.shopify_attributes }}
              tabindex="0"
              role="button"
              aria-label="View image {{ forloop.index }}"
            >
              {% if block.settings.image %}
                <img
                  class="img-carousel-showcase__image"
                  src="{{ block.settings.image | image_url: width: 800 }}"
                  srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                          {{ block.settings.image | image_url: width: 600 }} 600w,
                          {{ block.settings.image | image_url: width: 800 }} 800w,
                          {{ block.settings.image | image_url: width: 1200 }} 1200w,
                          {{ block.settings.image | image_url: width: 1500 }} 1500w,
                          {{ block.settings.image | image_url: width: 1800 }} 1800w,
                          {{ block.settings.image | image_url: width: 2100 }} 2100w,
                          {{ block.settings.image | image_url: width: 2400 }} 2400w,
                          {{ block.settings.image | image_url: width: 2700 }} 2700w,
                          {{ block.settings.image | image_url: width: 3000 }} 3000w,
                          {{ block.settings.image | image_url: width: 3300 }} 3300w,
                          {{ block.settings.image | image_url: width: 3600 }} 3600w,
                          {{ block.settings.image | image_url: width: 3900 }} 3900w,
                          {{ block.settings.image | image_url: width: 4200 }} 4200w"
                  sizes="(max-width: 768px) 80vw, (max-width: 1024px) 60vw, 600px,(min-width: 1025px) 100px"
                  alt="{{ block.settings.image_alt | default: block.settings.image.alt | default: 'Product image' }}"
                  loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
                <div class="img-carousel-showcase__zoom-indicator" aria-hidden="true">
                  <svg class="img-carousel-showcase__zoom-icon" fill="none" viewBox="0 0 24 24">
                    <circle cx="11" cy="11" r="7"/>
                    <path d="M21 21l-4.35-4.35"/>
                    <path d="M11 8v6M8 11h6"/>
                  </svg>
                </div>
              {% else %}
                <div class="img-carousel-showcase__image" style="display: flex; align-items: center; justify-content: center; color: #999;">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>

        {% if section.blocks.size > 1 %}
          <div class="img-carousel-showcase__controls">
            <button 
              class="img-carousel-showcase__arrow img-carousel-showcase__arrow--prev" 
              id="prev-{{ section.id }}"
              aria-label="Previous image"
              type="button"
            >
              <svg class="img-carousel-showcase__arrow-icon" fill="none" viewBox="0 0 24 24">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </button>
            <button 
              class="img-carousel-showcase__arrow img-carousel-showcase__arrow--next" 
              id="next-{{ section.id }}"
              aria-label="Next image"
              type="button"
            >
              <svg class="img-carousel-showcase__arrow-icon" fill="none" viewBox="0 0 24 24">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </button>
          </div>
        {% endif %}
      </div>

      {%- comment -%} Zoom Modal {%- endcomment -%}
      <div 
        class="img-carousel-showcase__zoom-modal" 
        id="zoom-modal-{{ section.id }}"
        role="dialog"
        aria-modal="true"
        aria-label="Zoomed image view"
      >
        <div class="img-carousel-showcase__zoom-content">
          <button 
            class="img-carousel-showcase__zoom-close" 
            id="zoom-close-{{ section.id }}"
            aria-label="Close zoomed view"
            type="button"
          >
            <svg class="img-carousel-showcase__zoom-close-icon" fill="none" viewBox="0 0 24 24">
              <path d="M18 6L6 18M6 6l12 12"/>
            </svg>
          </button>
          <div class="img-carousel-showcase__zoom-image" id="zoom-img-{{ section.id }}">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        </div>
      </div>

      <script>
        (function() {
          class ImageCarouselShowcase {
            constructor(element) {
              this.element = element;
              this.sectionId = element.dataset.sectionId;
              this.carousel = element.querySelector(`#carousel-${this.sectionId}`);
              this.slides = Array.from(element.querySelectorAll('.img-carousel-showcase__slide'));
              this.prevBtn = element.querySelector(`#prev-${this.sectionId}`);
              this.nextBtn = element.querySelector(`#next-${this.sectionId}`);
              this.zoomModal = element.querySelector(`#zoom-modal-${this.sectionId}`);
              this.zoomImg = element.querySelector(`#zoom-img-${this.sectionId}`);
              this.zoomClose = element.querySelector(`#zoom-close-${this.sectionId}`);
              this.currentIndex = 0;
              this.isTransitioning = false;
              
              this.init();
            }

            init() {
              if (this.slides.length === 0) return;

              // Arrow controls
              if (this.prevBtn) {
                this.prevBtn.addEventListener('click', () => this.prev());
              }
              if (this.nextBtn) {
                this.nextBtn.addEventListener('click', () => this.next());
              }

              // Keyboard navigation
              this.carousel.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowLeft') {
                  this.prev();
                } else if (e.key === 'ArrowRight') {
                  this.next();
                }
              });

              // Slide click to zoom (only center slide)
              this.slides.forEach((slide, index) => {
                slide.addEventListener('click', () => {
                  if (index === this.currentIndex) {
                    this.openZoom();
                  } else {
                    this.goToSlide(index);
                  }
                });

                // Keyboard support for slides
                slide.addEventListener('keydown', (e) => {
                  if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    if (index === this.currentIndex) {
                      this.openZoom();
                    } else {
                      this.goToSlide(index);
                    }
                  }
                });
              });

              // Zoom close
              if (this.zoomClose) {
                this.zoomClose.addEventListener('click', () => this.closeZoom());
              }
              if (this.zoomModal) {
                this.zoomModal.addEventListener('click', (e) => {
                  if (e.target === this.zoomModal) {
                    this.closeZoom();
                  }
                });
                // ESC key to close
                document.addEventListener('keydown', (e) => {
                  if (e.key === 'Escape' && this.zoomModal.classList.contains('img-carousel-showcase__zoom-modal--active')) {
                    this.closeZoom();
                  }
                });
              }

              // Initial render
              this.updateSlides();
            }

            prev() {
              if (this.isTransitioning || this.slides.length === 0) return;
              this.currentIndex = (this.currentIndex - 1 + this.slides.length) % this.slides.length;
              this.updateSlides();
            }

            next() {
              if (this.isTransitioning || this.slides.length === 0) return;
              this.currentIndex = (this.currentIndex + 1) % this.slides.length;
              this.updateSlides();
            }

            goToSlide(index) {
              if (this.isTransitioning || index === this.currentIndex) return;
              this.currentIndex = index;
              this.updateSlides();
            }

            updateSlides() {
              this.isTransitioning = true;
              const totalSlides = this.slides.length;

              this.slides.forEach((slide, index) => {
                // Remove all state classes
                slide.classList.remove(
                  'img-carousel-showcase__slide--center',
                  'img-carousel-showcase__slide--prev',
                  'img-carousel-showcase__slide--next',
                  'img-carousel-showcase__slide--hidden'
                );

                if (index === this.currentIndex) {
                  // Center slide - fully visible
                  slide.classList.add('img-carousel-showcase__slide--center');
                  slide.setAttribute('aria-current', 'true');
                } else {
                  slide.removeAttribute('aria-current');
                  
                  // Calculate prev and next positions
                  const prevIndex = (this.currentIndex - 1 + totalSlides) % totalSlides;
                  const nextIndex = (this.currentIndex + 1) % totalSlides;

                  if (index === prevIndex) {
                    slide.classList.add('img-carousel-showcase__slide--prev');
                  } else if (index === nextIndex) {
                    slide.classList.add('img-carousel-showcase__slide--next');
                  } else {
                    slide.classList.add('img-carousel-showcase__slide--hidden');
                  }
                }
              });

              // Shorter transition time for smoother feel
              setTimeout(() => {
                this.isTransitioning = false;
              }, 300);

              // Update aria-live region for screen readers
              this.announceSlide();
            }

            announceSlide() {
              const currentSlide = this.currentIndex + 1;
              const totalSlides = this.slides.length;
              const message = `Showing image ${currentSlide} of ${totalSlides}`;
              
              // Create or update aria-live region
              let liveRegion = this.element.querySelector('[aria-live]');
              if (!liveRegion) {
                liveRegion = document.createElement('div');
                liveRegion.setAttribute('aria-live', 'polite');
                liveRegion.setAttribute('aria-atomic', 'true');
                liveRegion.className = 'sr-only';
                liveRegion.style.cssText = 'position:absolute;left:-10000px;width:1px;height:1px;overflow:hidden;';
                this.element.appendChild(liveRegion);
              }
              liveRegion.textContent = message;
            }

            openZoom() {
              const currentSlide = this.slides[this.currentIndex];
              const img = currentSlide.querySelector('img');
              if (!img || !this.zoomModal || !this.zoomImg) return;

              // Use high-res version for zoom
              const highResSrc = img.src.replace(/width=\d+/, 'width=2000');
              
              // Clear previous content and add the high-res image
              this.zoomImg.innerHTML = '';
              const zoomImage = document.createElement('img');
              zoomImage.src = highResSrc;
              zoomImage.alt = img.alt;
              zoomImage.style.maxWidth = '100%';
              zoomImage.style.maxHeight = '90vh';
              this.zoomImg.appendChild(zoomImage);

              this.zoomModal.classList.add('img-carousel-showcase__zoom-modal--active');
              document.body.style.overflow = 'hidden';

              // Focus close button for accessibility
              setTimeout(() => {
                this.zoomClose?.focus();
              }, 100);
            }

            closeZoom() {
              if (!this.zoomModal) return;
              this.zoomModal.classList.remove('img-carousel-showcase__zoom-modal--active');
              document.body.style.overflow = '';

              // Return focus to the slide
              this.slides[this.currentIndex]?.focus();
            }
          }

          // Initialize the carousel
          const section = document.querySelector('.img-carousel-showcase[data-section-id="{{ section.id }}"]');
          if (section) {
            new ImageCarouselShowcase(section);
          }
        })();
      </script>
    {% else %}
      <div style="text-align: center; padding: 40px; color: #999;">
        <p>Add image blocks to display the carousel</p>
      </div>
    {% endif %}
  </div>
</section>

