<style>
  #shopify-section-{{ section.id }} .img-carousel-showcase {
    padding: 60px 20px;
    background-color: {{ section.settings.background_color }};
    overflow: hidden;
  }



  #shopify-section-{{ section.id }} .img-carousel-showcase__header {
    text-align: center;
    margin-bottom: 48px;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__title {
    font-size: {{ section.settings.title_font_size_desktop }}px;
    font-weight: 600;
    color: {{ section.settings.title_color }};
    margin: 0 0 12px 0;
    line-height: {{ section.settings.title_line_height_desktop }};
    letter-spacing: -0.02em;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__subtitle {
    font-size: {{ section.settings.subtitle_font_size_desktop }}px;
    color: {{ section.settings.subtitle_color }};
    max-width: 600px;
    margin: 0 auto;
    line-height: {{ section.settings.subtitle_line_height_desktop }};
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__carousel-wrapper {
    position: relative;

  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__carousel {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    overflow: hidden;
    position: relative;
    min-height: 400px;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__slide {
    flex-shrink: 0;
    transition: opacity 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__slide--hidden {
    display: none;
  }


  /* #shopify-section-{{ section.id }} .img-carousel-showcase__slide--prev .img-carousel-showcase__image {
    width: 200%;
    transform: translateX(-50%);
    border-radius: 0 12px 12px 0;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__slide--next .img-carousel-showcase__image {
    width: 200%;
    transform: translateX(0);
    border-radius: 12px 0 0 12px;
  } */

  #shopify-section-{{ section.id }} .img-carousel-showcase__slide--center {
    max-width: 700px;
    opacity: 1;
    z-index: 2;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 12px;
    object-fit: cover;
    aspect-ratio: 4/3;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__zoom-indicator {
    position: absolute;
    bottom: 16px;
    right: 16px;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__slide--center:hover .img-carousel-showcase__zoom-indicator {
    opacity: 1;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__slide--prev .img-carousel-showcase__zoom-indicator,
  #shopify-section-{{ section.id }} .img-carousel-showcase__slide--next .img-carousel-showcase__zoom-indicator {
    display: none;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__zoom-icon {
    width: 20px;
    height: 20px;
    stroke: #333;
    stroke-width: 2;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__controls {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    padding: 0 20px;
    pointer-events: none;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__arrow {
    pointer-events: all;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: none;
    border-radius: 50%;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__arrow:hover {
    background: #fff;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    transform: scale(1.05);
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__arrow:active {
    transform: scale(0.95);
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__arrow:disabled {
    opacity: 0.3;
    cursor: not-allowed;
    pointer-events: none;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__arrow-icon {
    width: 24px;
    height: 24px;
    stroke: #333;
    stroke-width: 2;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__arrow--prev .img-carousel-showcase__arrow-icon {
    transform: rotate(180deg);
  }

  /* Zoom Modal */
  #shopify-section-{{ section.id }} .img-carousel-showcase__zoom-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.95);
    z-index: 9999;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__zoom-modal--active {
    display: flex;
    opacity: 1;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__zoom-content {
    max-width: 90vw;
    max-height: 90vh;
    position: relative;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__zoom-image {
    max-width: 100%;
    max-height: 90vh;
    width: auto;
    height: auto;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  #shopify-section-{{ section.id }} .img-carousel-showcase__zoom-image img,
  #shopify-section-{{ section.id }} .img-carousel-showcase__zoom-image svg {
    max-width: 100%;
    max-height: 90vh;
    width: auto;
    height: auto;
    border-radius: 8px;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__zoom-close {
    position: absolute;
    top: -50px;
    right: 0;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: none;
    border-radius: 50%;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__zoom-close:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.05);
  }

  #shopify-section-{{ section.id }} .img-carousel-showcase__zoom-close-icon {
    width: 24px;
    height: 24px;
    stroke: #fff;
    stroke-width: 2;
    stroke-linecap: round;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    #shopify-section-{{ section.id }} .img-carousel-showcase {
      padding: 40px 16px;
    }

    #shopify-section-{{ section.id }} .img-carousel-showcase__header {
      margin-bottom: 32px;
    }

    #shopify-section-{{ section.id }} .img-carousel-showcase__slide--center {
      width: 60%;
    }

    #shopify-section-{{ section.id }} .img-carousel-showcase__slide--prev,
    #shopify-section-{{ section.id }} .img-carousel-showcase__slide--next {
      width: 20%;
    }
  }

  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .img-carousel-showcase {
      padding: 32px 12px;
    }

    #shopify-section-{{ section.id }} .img-carousel-showcase__title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      line-height: {{ section.settings.title_line_height_mobile }};
    }

    #shopify-section-{{ section.id }} .img-carousel-showcase__subtitle {
      font-size: {{ section.settings.subtitle_font_size_mobile }}px;
      line-height: {{ section.settings.subtitle_line_height_mobile }};
    }

    #shopify-section-{{ section.id }} .img-carousel-showcase__carousel {
      min-height: 300px;
    }

    #shopify-section-{{ section.id }} .img-carousel-showcase__slide--center {
      width: 65%;
    }

    #shopify-section-{{ section.id }} .img-carousel-showcase__slide--prev,
    #shopify-section-{{ section.id }} .img-carousel-showcase__slide--next {
      width: 17.5%;
    }

    #shopify-section-{{ section.id }} .img-carousel-showcase__arrow {
      width: 40px;
      height: 40px;
    }

    #shopify-section-{{ section.id }} .img-carousel-showcase__arrow-icon {
      width: 20px;
      height: 20px;
    }

    #shopify-section-{{ section.id }} .img-carousel-showcase__controls {
      padding: 0 8px;
    }

    #shopify-section-{{ section.id }} .img-carousel-showcase__zoom-indicator {
      width: 36px;
      height: 36px;
      bottom: 12px;
      right: 12px;
    }

    #shopify-section-{{ section.id }} .img-carousel-showcase__zoom-icon {
      width: 18px;
      height: 18px;
    }
  }

  @media (max-width: 480px) {
    #shopify-section-{{ section.id }} .img-carousel-showcase__slide--center {
      width: 70%;
    }

    #shopify-section-{{ section.id }} .img-carousel-showcase__slide--prev,
    #shopify-section-{{ section.id }} .img-carousel-showcase__slide--next {
