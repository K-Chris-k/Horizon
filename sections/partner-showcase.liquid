

<style>
  .partner-showcase {
    background-color: #ffffff;
    padding: 60px 20px;
  }

  .partner-showcase__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .partner-showcase__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .partner-showcase__title {
    font-size: 36px;
    font-weight: 400;
    line-height: 1.4;
    color: #333333;
    margin: 0;
  }

  .partner-showcase__items {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px 30px;
  }

  .partner-showcase__item {
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: flex-start;
  }

  .partner-showcase__image-wrapper {
    width: 100%;
    height: 280px;
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    background-color: #f5f5f5;
  }

  .partner-showcase__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .partner-showcase__content {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .partner-showcase__item-title {
    font-size: 24px;
    font-weight: 500;
    line-height: 1.3;
    color: #1a1a1a;
    margin: 0;
  }

  .partner-showcase__description {
    font-size: 15px;
    line-height: 1.6;
    color: #666666;
    margin: 0;
  }

  .partner-showcase__author {
    font-size: 14px;
    line-height: 1.5;
    color: #999999;
    font-style: italic;
    margin: 0;
  }

  .partner-showcase__link {
    display: inline-block;
    margin-top: 8px;
    font-size: 14px;
    color: #000000;
    text-decoration: none;
    border-bottom: 1px solid #000000;
    transition: opacity 0.3s ease;
  }

  .partner-showcase__link:hover {
    opacity: 0.6;
  }

  /* 移动端布局 */
  @media screen and (max-width: 768px) {
    .partner-showcase {
      padding: 40px 16px;
    }

    .partner-showcase__header {
      margin-bottom: 40px;
    }

    .partner-showcase__title {
      font-size: 28px;
    }

    .partner-showcase__items {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .partner-showcase__image-wrapper {
      height: 250px;
    }

    .partner-showcase__item-title {
      font-size: 22px;
    }

    .partner-showcase__description {
      font-size: 15px;
    }
  }

  @media screen and (max-width: 480px) {
    .partner-showcase {
      padding: 30px 12px;
    }

    .partner-showcase__title {
      font-size: 24px;
    }

    .partner-showcase__image-wrapper {
      height: 200px;
    }

    .partner-showcase__item-title {
      font-size: 20px;
    }

    .partner-showcase__description {
      font-size: 14px;
    }
  }
</style>

<div class="partner-showcase">
  <div class="partner-showcase__container">
    {%- if section.settings.title != blank -%}
      <div class="partner-showcase__header">
        <h2 class="partner-showcase__title">{{ section.settings.title }}</h2>
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="partner-showcase__items">
        {%- for block in section.blocks -%}
          <div class="partner-showcase__item" {{ block.shopify_attributes }}>
            <div class="partner-showcase__image-wrapper">
              {%- if block.settings.image != blank -%}
                <img
                  src="{{ block.settings.image | image_url: width: 800 }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  class="partner-showcase__image"
                  loading="lazy"
                  width="800"
                  height="600"
                >
              {%- else -%}
                <div class="partner-showcase__image" style="background-color: #e0e0e0;"></div>
              {%- endif -%}
            </div>

            <div class="partner-showcase__content">
              {%- if block.settings.title != blank -%}
                <h3 class="partner-showcase__item-title">{{ block.settings.title }}</h3>
              {%- endif -%}

              {%- if block.settings.description != blank -%}
                <p class="partner-showcase__description">{{ block.settings.description }}</p>
              {%- endif -%}

              {%- if block.settings.author != blank -%}
                <p class="partner-showcase__author">{{ block.settings.author }}</p>
              {%- endif -%}

              {%- if block.settings.link_text != blank and block.settings.link_url != blank -%}
                <a href="{{ block.settings.link_url }}" class="partner-showcase__link">
                  {{ block.settings.link_text }}
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Partner Showcase",
  "tag": "section",
  "class": "section-partner-showcase",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "We are your reliable partner."
    }
  ],
  "blocks": [
    {
      "type": "partner_item",
      "name": "Partner Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Enter description here..."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "Discover"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Partner Showcase",
      "blocks": [
        {
          "type": "partner_item",
          "settings": {
            "title": "Stylist",
