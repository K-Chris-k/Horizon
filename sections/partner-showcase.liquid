

<style>
  .partner-showcase {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top_desktop }}px {{ section.settings.padding_horizontal_desktop }}px {{ section.settings.padding_bottom_desktop }}px;
  }

  .partner-showcase__container {
    max-width: 1140px;
    margin: 0 auto;
  }

  .partner-showcase__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .partner-showcase__title {
    font-size: {{ section.settings.title_font_size_desktop }}px;
    font-weight: 600;
    line-height: {{ section.settings.title_line_height_desktop }};
    color: {{ section.settings.title_color }};
    margin: 0;
  }

  .partner-showcase__items {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px 30px;
  }

  .partner-showcase__item {
    display: flex;
    flex-direction: row;
    gap: 20px;
    align-items: flex-start;
  }

  .partner-showcase__image-wrapper {
    width: 100%;
    height: 200px;
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    background-color: #f5f5f5;
  }

  .partner-showcase__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .partner-showcase__content {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .partner-showcase__item-title {
    font-size: {{ section.settings.item_title_font_size_desktop }}px;
    font-weight: 500;
    line-height: {{ section.settings.item_title_line_height_desktop }};
    color: {{ section.settings.item_title_color }};
    margin: 0;
  }

  .partner-showcase__description {
    font-size: 15px;
    line-height: 1.6;
    color: #666666;
    margin: 0;
  }

  .partner-showcase__author {
    font-size: 14px;
    line-height: 1.5;
    color: #999999;
    font-style: italic;
    margin: 0;
  }

  .partner-showcase__link {
    display: inline-block;
    margin-top: 8px;
    font-size: 14px;
    color: #000000;
    text-decoration: none;
    border-bottom: 1px solid #000000;
    transition: opacity 0.3s ease;
  }

  .partner-showcase__link:hover {
    opacity: 0.6;
  }

  /* 移动端布局 */
  @media screen and (max-width: 768px) {
    .partner-showcase {
      padding: {{ section.settings.padding_top_mobile }}px {{ section.settings.padding_horizontal_mobile }}px {{ section.settings.padding_bottom_mobile }}px;
    }

    .partner-showcase__header {
      margin-bottom: 40px;
    }

    .partner-showcase__title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      line-height: {{ section.settings.title_line_height_mobile }};
    }

    .partner-showcase__items {
      grid-template-columns: 1fr;
      gap: 40px;
      padding:0 30px;
    }
    .partner-showcase__item{
      flex-direction: column;
    }
    .partner-showcase__image-wrapper {
      height: 300px;
    }

    .partner-showcase__item-title {
      font-size: {{ section.settings.item_title_font_size_mobile }}px;
      line-height: {{ section.settings.item_title_line_height_mobile }};
    }

    .partner-showcase__description {
      font-size: 15px;
    }
  }
</style>

<div class="partner-showcase">
  <div class="partner-showcase__container">
    {%- if section.settings.title != blank -%}
      <div class="partner-showcase__header">
        <h2 class="partner-showcase__title">{{ section.settings.title }}</h2>
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="partner-showcase__items">
        {%- for block in section.blocks -%}
          <div class="partner-showcase__item" {{ block.shopify_attributes }}>
            <div class="partner-showcase__image-wrapper">
              {%- if block.settings.image != blank -%}
                <img
                  src="{{ block.settings.image | image_url: width: 800 }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  class="partner-showcase__image"
                  loading="lazy"
                  width="800"
                  height="600"
                >
              {%- else -%}
                <div class="partner-showcase__image" style="background-color: #e0e0e0;"></div>
              {%- endif -%}
            </div>

            <div class="partner-showcase__content">
              {%- if block.settings.title != blank -%}
                <h3 class="partner-showcase__item-title">{{ block.settings.title }}</h3>
              {%- endif -%}

              {%- if block.settings.description != blank -%}
                <p class="partner-showcase__description">{{ block.settings.description }}</p>
              {%- endif -%}

              {%- if block.settings.author != blank -%}
                <p class="partner-showcase__author">{{ block.settings.author }}</p>
              {%- endif -%}

              {%- if block.settings.link_text != blank and block.settings.link_url != blank -%}
                <a href="{{ block.settings.link_url }}" class="partner-showcase__link">
                  {{ block.settings.link_text }}
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

