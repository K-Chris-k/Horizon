{{ 'brand-philosophy.css' | asset_url | stylesheet_tag }}
{%- style -%}
  #shopify-section-{{ section.id }}  {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: {{ section.settings.background_color }};
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div
  class="brand-philosophy-container-{{ section.id }} section section--{{ section.settings.content_width }}"
>
  <div class="brand-philosophy-blocks">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'text_overlay' %}
          <div
            class="brand-philosophy-block brand-philosophy-block--text-overlay brand-philosophy-block--flex-{{ block.settings.flex_ratio }}"
            {{ block.shopify_attributes }}
          >
            <div class="brand-philosophy-image-wrapper flex">
              {% if block.settings.image != blank %}
                {%- style -%}
                  .mobile_aspect_ratio-{{ block.id }} {
                    width: 100%;
                    height: auto;
                    aspect-ratio: {{block.settings.image_mobile.aspect_ratio}} !important;
                  }
                {%- endstyle -%}
                {% assign aspect_ratio = block.settings.image.aspect_ratio %}
                {% assign style = 'aspect-ratio: ' | append: aspect_ratio | append: ';' %}
                {% assign class_img = 'mobile_aspect_ratio-' | append: block.id %}
                <picture>
                  <source
                    media="(max-width: 749px)"
                    srcset="{{ block.settings.image_mobile | image_url }}"
                  >
                  <source
                    media="(min-width: 750px)"
                    srcset="{{ block.settings.image | image_url }}"
                  >
                  {{
                    block.settings.image
                    | image_url: width: 1500
                    | image_tag:
                      loading: 'eager',
                      widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                      style: style,
                      class: class_img
                  }}
                </picture>
              {% endif %}
            </div>
            {% if block.settings.heading != blank or block.settings.text != blank %}
              <div class="brand-philosophy-text-overlay brand-philosophy-text-overlay--{{ block.settings.text_position }}">
                {% if block.settings.heading != blank %}
                  <h2 class="brand-philosophy-heading" style="font-size: {{ block.settings.heading_font_size }}px;">
                    {{ block.settings.heading }}
                  </h2>
                {% endif %}
                {% if block.settings.text != blank %}
                  <div class="brand-philosophy-text" style="font-size: {{ block.settings.text_font_size }}px;">
                    {{ block.settings.text }}
                  </div>
                {% endif %}
              </div>
            {% endif %}
          </div>

        {% when 'image_only' %}
          <div
            class="brand-philosophy-block brand-philosophy-block--image-only brand-philosophy-block--flex-{{ block.settings.flex_ratio }}"
            {{ block.shopify_attributes }}
          >
            <div class="brand-philosophy-image-wrapper flex ">
              {% if block.settings.image != blank %}
                {%- style -%}
                  .mobile_aspect_ratio-{{ block.id }} {
                    width: 100%;
                    height: auto;
                    aspect-ratio: {{block.settings.image_mobile.aspect_ratio}} !important;
                  }
                {%- endstyle -%}
                {% assign aspect_ratio = block.settings.image.aspect_ratio %}
                {% assign style = 'aspect-ratio: ' | append: aspect_ratio | append: ';' %}
                {% assign class_img = 'mobile_aspect_ratio-' | append: block.id %}
                <picture>
                  <source
                    media="(max-width: 749px)"
                    srcset="{{ block.settings.image_mobile | image_url }}"
                  >
                  <source
                    media="(min-width: 750px)"
                    srcset="{{ block.settings.image | image_url }}"
                  >
                  {{
                    block.settings.image
                    | image_url: width: 1500
                    | image_tag:
                      loading: 'eager',
                      widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                      style: style,
                      class: class_img
                  }}
                </picture>
              {% endif %}
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>
