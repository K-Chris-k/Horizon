<style>
  .technical-specs-section {
    padding: 60px 0;
    max-width: {{ section.settings.container_width }}px !important;
    margin: 0 auto;
  }
  .section-technical-specifications {
    background-color: {{ section.settings.background_color }};
    

  }

  .technical-specs-container {

    margin: 0 auto;
    padding: 0 20px;
  }

  .technical-specs-title {
    font-size: {{ section.settings.title_font_size_desktop }}px;
    line-height: {{ section.settings.title_line_height_desktop }};
    font-weight: 300;
    margin-bottom: 40px;
    color: #333;
  }

  .technical-specs-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    margin-bottom: 0;
  }

  .specs-left {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .specs-subtitle {
    font-size: {{ section.settings.subtitle_font_size_desktop }}px;
    line-height: {{ section.settings.subtitle_line_height_desktop }};
    font-weight: 300;
    margin-bottom: 20px;
    color: inherit;
  }

  .specs-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px 60px;
  }

  .spec-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .spec-label {
    font-size: {{ section.settings.content_font_size_desktop }}px;
    line-height: {{ section.settings.content_line_height_desktop }};
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .spec-value {
    font-size: {{ section.settings.content_font_size_desktop }}px;
    line-height: {{ section.settings.content_line_height_desktop }};
  }

  .specs-right {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .specs-image {
    max-width: 100%;
    height: auto;
  }

  /* Tabs Section */
  .specs-tabs-wrapper {
    background: transparent;
    margin-top: 0;
    margin-bottom: 40px;
  }

  .specs-tabs {
    display: flex;
    gap: 40px;
    border-bottom: 1px solid #e0e0e0;
    margin-bottom: 0;
    justify-content: space-between;
  }

  .specs-tab {
    padding: 15px 0;
    font-size: {{ section.settings.tab_font_size_desktop }}px;
    line-height: {{ section.settings.tab_line_height_desktop }};
    font-weight: 400;
    color: #000;
    cursor: pointer;
    border-bottom: 2px solid transparent;
    transition: all 0.3s ease;
    background: none;
    border-top: none;
    border-left: none;
    border-right: none;
  }



  .specs-tab.active {

    border-bottom-color: #333;
  }

  .specs-tab-content {
    display: none;
    padding: 40px 30px;
  }

  .specs-tab-content.active {
    display: block;
  }

  /* PDF Downloads */
  .download-list {
    display: flex;
    flex-direction: column;
  }

  .download-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 0;
    border-bottom: 1px solid #e0e0e0;
  }

  .download-item:last-child {
    border-bottom: none;
  }

  .download-label {
    font-size: {{ section.settings.content_font_size_desktop }}px;
    line-height: {{ section.settings.content_line_height_desktop }};
    color: inherit;
  }

  .download-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: transparent;
    font-size: {{ section.settings.content_font_size_desktop }}px;
    line-height: {{ section.settings.content_line_height_desktop }};
    color: inherit;
    opacity: 0.7;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .download-button:hover {
    opacity: 1;
  }


  .download-icon {
    width: 19px;
    height: 19px;
    flex-shrink: 0;
  }

  .tab-content-title {
    font-size: {{ section.settings.subtitle_font_size_desktop }}px;
    line-height: {{ section.settings.subtitle_line_height_desktop }};
    font-weight: 300;
    margin-bottom: 15px;
    color: inherit;
  }

  /* FAQ */
  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .faq-item {
    border-bottom: 1px solid #e0e0e0;
  }

  .faq-question {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 0;
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    font-size: {{ section.settings.content_font_size_desktop }}px;
    line-height: {{ section.settings.content_line_height_desktop }};
    font-weight: 400;
    letter-spacing: 0.5px;
    transition: color 0.3s ease;
  }


  .faq-icon {
    transition: transform 0.3s ease;
    font-size: 18px;
  }

  .faq-item.active .faq-icon {
    transform: rotate(90deg);
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
    font-size: {{ section.settings.content_font_size_desktop }}px;
    line-height: {{ section.settings.content_line_height_desktop }};
  }

  .faq-answer-content {
    padding-bottom: 24px;
    margin-left: 2rem;
  }

  .faq-item.active .faq-answer {
    max-height: 500px;
  }

  /* Video */
  .video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 30px;
  }

  .video-item {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
  }

  .video-thumbnail-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16/9;
  }

  .video-thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .video-play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 70px;
    height: 70px;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    pointer-events: none;
  }

  .video-play-button::after {
    content: '';
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 12px 0 12px 20px;
    border-color: transparent transparent transparent #333;
    margin-left: 4px;
  }

  .video-item:hover .video-play-button {
    transform: translate(-50%, -50%) scale(1.1);
    background: rgba(255, 255, 255, 1);
  }

  .video-placeholder {
    width: 100%;
    aspect-ratio: 16/9;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 48px;
    color: #999;
  }

  .video-title {
    padding: 15px;
    font-size: {{ section.settings.content_font_size_desktop }}px;
    line-height: {{ section.settings.content_line_height_desktop }};
  }

  /* Modal for Video */
  .video-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    z-index: 9999;
    align-items: center;
    justify-content: center;
  }

  .video-modal.active {
    display: flex;
  }

  .video-modal-content {
    position: relative;
    width: 90%;
    max-width: 1200px;
  }

  .video-modal-close {
    position: absolute;
    top: -40px;
    right: 0;
    background: none;
    border: none;
    color: white;
    font-size: 32px;
    cursor: pointer;
    padding: 0;
    width: 40px;
    height: 40px;
  }

  .video-player {
    width: 100%;
    aspect-ratio: 16/9;
  }

  /* Fix horizontal scrolling on mobile */
  * {
    box-sizing: border-box;
  }

  .technical-specs-section,
  .technical-specs-container,
  .specs-tab-content,
  .technical-specs-content {
    max-width: 100%;
    overflow-x: hidden;
  }

  @media (max-width: 768px) {
    .technical-specs-section {
      padding: 40px 0;
    }

    .technical-specs-title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      line-height: {{ section.settings.title_line_height_mobile }};
      margin-bottom: 30px;
    }

    .technical-specs-content {
      grid-template-columns: 1fr;
      gap: 30px;
      margin-bottom: 0;
    }

    .specs-tab-content {
      padding: 30px 20px;
      margin: 0 -20px;
    }

    .specs-subtitle {
      font-size: {{ section.settings.subtitle_font_size_mobile }}px;
      line-height: {{ section.settings.subtitle_line_height_mobile }};
      margin-bottom: 15px;
    }

    .specs-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .spec-label {
      font-size: {{ section.settings.content_font_size_mobile }}px;
      line-height: {{ section.settings.content_line_height_mobile }};
    }

    .spec-value {
      font-size: {{ section.settings.content_font_size_mobile }}px;
      line-height: {{ section.settings.content_line_height_mobile }};
    }

    .specs-tabs-wrapper {
      margin-top: 0;
      margin-left: -20px;
      margin-right: -20px;
      padding: 0 20px;
    }

    .specs-tabs {
      gap: 20px;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none; /* Firefox */
      -ms-overflow-style: none; /* IE and Edge */
    }

    .specs-tabs::-webkit-scrollbar {
      display: none; /* Chrome, Safari, Opera */
    }

    .specs-tab {
      padding: 12px 0;
      font-size: 14px;
      white-space: nowrap;
      flex-shrink: 0;
    }

    .tab-content-title {
      font-size: 24px;
      margin-bottom: 20px;
    }

    .download-label {
      font-size: 14px;
      word-break: break-word;
    }

    .download-button {
      font-size: 12px;
      padding: 8px 15px;
      flex-shrink: 0;
    }

    .download-item {
      gap: 10px;
    }

    .faq-question {
      font-size: 13px;
      padding: 20px 0;
    }

    .faq-answer {
      font-size: 13px;
    }

    .faq-answer-content {
      margin-left: 0;
    }

    .video-grid {
      grid-template-columns: 1fr;
    }

    .video-play-button {
      width: 60px;
      height: 60px;
    }

    .video-play-button::after {
      border-width: 10px 0 10px 16px;
    }

    .specs-image {
      width: 100%;
      height: auto;
    }
  }
</style>

<div class="technical-specs-section {{ section.settings.custom_class }}">
  <div class="technical-specs-container">
    {%- if section.settings.title != blank -%}
      <h2 class="technical-specs-title">{{ section.settings.title }}</h2>
    {%- endif -%}

    {%- assign has_specifications = false -%}
    {%- assign has_downloads = false -%}
    {%- assign has_faqs = false -%}
    {%- assign has_videos = false -%}
    {%- assign tab_order = "" -%}

    {%- for block in section.blocks -%}
      {%- if block.type == 'tab_item' -%}
        {%- assign tab_type = block.settings.tab_type -%}
        {%- if tab_order != "" -%}
          {%- assign tab_order = tab_order | append: "," -%}
        {%- endif -%}
        {%- assign tab_order = tab_order | append: tab_type -%}
        
        {%- if tab_type == 'specification' -%}
          {%- assign has_specifications = true -%}
        {%- elsif tab_type == 'pdf' -%}
          {%- assign has_downloads = true -%}
        {%- elsif tab_type == 'faq' -%}
          {%- assign has_faqs = true -%}
        {%- elsif tab_type == 'video' -%}
          {%- assign has_videos = true -%}
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}

    {%- assign tab_array = tab_order | split: "," -%}

    {%- if tab_order != "" -%}
    <div class="specs-tabs-wrapper">
      <!-- Tabs navigation at the top -->
      <div class="specs-tabs">
        {%- assign first_tab = tab_array[0] -%}
        {%- for tab in tab_array -%}
          {%- for block in section.blocks -%}
            {%- if block.type == 'tab_item' and block.settings.tab_type == tab -%}
              <button class="specs-tab{% if tab == first_tab %} active{% endif %} " data-tab="{{ tab }}" {{ block.shopify_attributes }}>
                {{ block.settings.tab_label }}
              </button>
              {%- break -%}
            {%- endif -%}
          {%- endfor -%}
        {%- endfor -%}
      </div>

      {%- if has_specifications -%}
        {%- assign spec_bg_color = "transparent" -%}
        {%- assign spec_text_color = "#333333" -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'tab_item' and block.settings.tab_type == 'specification' -%}
            {%- assign spec_bg_color = block.settings.tab_background_color -%}
            {%- assign spec_text_color = block.settings.tab_text_color -%}
            {%- break -%}
          {%- endif -%}
        {%- endfor -%}
        <div class="specs-tab-content{% if tab_array[0] == 'specification' %} active{% endif %}" data-content="specification" style="background-color: {{ spec_bg_color }}; color: {{ spec_text_color }};">
          <!-- Specification content inside tab -->
          <div class="technical-specs-content">
            <div class="specs-left">
              {%- if section.settings.subtitle != blank -%}
                <h3 class="specs-subtitle">{{ section.settings.subtitle }}</h3>
              {%- endif -%}
              
              <div class="specs-grid">
                {%- for block in section.blocks -%}
                  {%- if block.type == 'tech_spec' -%}
                    <div class="spec-item" {{ block.shopify_attributes }}>
                      <div class="spec-label" style="color: {{ block.settings.label_color }};">
                        {{ block.settings.label }}
                      </div>
                      <div class="spec-value" style="color: {{ block.settings.value_color }};">
                        {{ block.settings.value }}
                      </div>
                    </div>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            </div>

            <div class="specs-right">
              {%- if section.settings.image != blank -%}
                <img 
                  src="{{ section.settings.image | image_url: width: 800 }}" 
                  alt="{{ section.settings.image.alt | escape }}"
                  class="specs-image"
                  width="{{ section.settings.image.width }}"
                  height="{{ section.settings.image.height }}"
                  loading="lazy"
                >
              {%- else -%}
                <div class="video-placeholder">📐</div>
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- endif -%}

      {%- if has_downloads -%}
        {%- assign pdf_bg_color = "transparent" -%}
        {%- assign pdf_text_color = "#333333" -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'tab_item' and block.settings.tab_type == 'pdf' -%}
            {%- assign pdf_bg_color = block.settings.tab_background_color -%}
            {%- assign pdf_text_color = block.settings.tab_text_color -%}
            {%- break -%}
          {%- endif -%}
        {%- endfor -%}
        <div class="specs-tab-content{% if tab_array[0] == 'pdf' %} active{% endif %}" data-content="pdf" style="background-color: {{ pdf_bg_color }}; color: {{ pdf_text_color }};">
          <div class="download-list">
            {%- for block in section.blocks -%}
              {%- if block.type == 'download' -%}
                <div class="download-item" {{ block.shopify_attributes }}>
                  <span class="download-label">{{ block.settings.label }}</span>
                  {%- if block.settings.file != blank -%}
                    <a href="{{ block.settings.file }}" class="download-button" download target="_blank" rel="noopener noreferrer">
                      <svg class="download-icon" xmlns="http://www.w3.org/2000/svg" id="Layer_2" width="19" height="19" data-name="Layer 2" viewBox="0 0 114.79 146.52">
                        <g id="Layer_1-2" data-name="Layer 1">
                          <polyline fill="none" stroke="currentColor" stroke-miterlimit="10" stroke-width="1.5px" points="76.09 .75 .75 .75 .75 145.77 114.04 145.77 114.04 43.02"></polyline>
                          <polygon fill="currentColor" points="76.18 42.84 114.54 43.03 76.09 .26 76.18 42.84"></polygon>
                        </g>
                      </svg>
                      Download
                    </a>
                  {%- endif -%}
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}

      {%- if has_faqs -%}
        {%- assign faq_bg_color = "transparent" -%}
        {%- assign faq_text_color = "#333333" -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'tab_item' and block.settings.tab_type == 'faq' -%}
            {%- assign faq_bg_color = block.settings.tab_background_color -%}
            {%- assign faq_text_color = block.settings.tab_text_color -%}
            {%- break -%}
          {%- endif -%}
        {%- endfor -%}
        <div class="specs-tab-content{% if tab_array[0] == 'faq' %} active{% endif %}" data-content="faq" style="background-color: {{ faq_bg_color }}; color: {{ faq_text_color }};">
          {%- if section.settings.faq_title != blank -%}
            <h3 class="tab-content-title">{{ section.settings.faq_title }}</h3>
          {%- endif -%}
          <div class="faq-list">
            {%- for block in section.blocks -%}
              {%- if block.type == 'faq' -%}
                <div class="faq-item" {{ block.shopify_attributes }}>
                  <button class="faq-question" style="color: {{ block.settings.question_color }};">
                    <span>{{ block.settings.question }}</span>
                    <span class="faq-icon" style="color: {{ block.settings.question_color }};">›</span>
                  </button>
                  <div class="faq-answer">
                    <div class="faq-answer-content" style="color: {{ block.settings.answer_color }};">
                      {{ block.settings.answer }}
                    </div>
                  </div>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}

      {%- if has_videos -%}
        {%- assign video_bg_color = "transparent" -%}
        {%- assign video_text_color = "#333333" -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'tab_item' and block.settings.tab_type == 'video' -%}
            {%- assign video_bg_color = block.settings.tab_background_color -%}
            {%- assign video_text_color = block.settings.tab_text_color -%}
            {%- break -%}
          {%- endif -%}
        {%- endfor -%}
        <div class="specs-tab-content{% if tab_array[0] == 'video' %} active{% endif %}" data-content="video" style="background-color: {{ video_bg_color }}; color: {{ video_text_color }};">
          <div class="video-grid">
            {%- for block in section.blocks -%}
              {%- if block.type == 'video' -%}
                <div class="video-item" data-video-url="{{ block.settings.video_url }}" {{ block.shopify_attributes }}>
                  <div class="video-thumbnail-wrapper">
                    {%- if block.settings.thumbnail != blank -%}
                      <img 
                        src="{{ block.settings.thumbnail | image_url: width: 600 }}" 
                        alt="{{ block.settings.title | escape }}"
                        class="video-thumbnail"
                        width="{{ block.settings.thumbnail.width }}"
                        height="{{ block.settings.thumbnail.height }}"
                        loading="lazy"
                      >
                    {%- else -%}
                      <div class="video-placeholder">▶</div>
                    {%- endif -%}
                    <div class="video-play-button"></div>
                  </div>
                  {%- if block.settings.title != blank -%}
                    <div class="video-title" style="background-color: {{ block.settings.title_background_color }}; color: {{ block.settings.title_color }};">{{ block.settings.title }}</div>
                  {%- endif -%}
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}
    </div>
    {%- endif -%}
  </div>
</div>

<div class="video-modal" id="videoModal">
  <div class="video-modal-content">
    <button class="video-modal-close" id="closeVideoModal">&times;</button>
    <div id="videoPlayerContainer"></div>
  </div>
</div>

<script>
  // Tab switching
  document.querySelectorAll('.specs-tab').forEach(tab => {
    tab.addEventListener('click', function() {
      const tabName = this.getAttribute('data-tab');
      
      // Remove active class from all tabs and contents
      document.querySelectorAll('.specs-tab').forEach(t => t.classList.remove('active'));
      document.querySelectorAll('.specs-tab-content').forEach(c => c.classList.remove('active'));
      
      // Add active class to clicked tab and corresponding content
      this.classList.add('active');
      document.querySelector(`[data-content="${tabName}"]`).classList.add('active');
    });
  });

  // FAQ accordion
  document.querySelectorAll('.faq-question').forEach(question => {
    question.addEventListener('click', function() {
      const faqItem = this.closest('.faq-item');
      const isActive = faqItem.classList.contains('active');
      
      // Close all FAQ items
      document.querySelectorAll('.faq-item').forEach(item => {
        item.classList.remove('active');
      });
      
      // Open clicked item if it wasn't active
      if (!isActive) {
        faqItem.classList.add('active');
      }
    });
  });

  // Video modal
  const videoModal = document.getElementById('videoModal');
  const closeVideoModal = document.getElementById('closeVideoModal');
  const videoPlayerContainer = document.getElementById('videoPlayerContainer');

  document.querySelectorAll('.video-item').forEach(item => {
    item.addEventListener('click', function() {
      const videoUrl = this.getAttribute('data-video-url');
      
      if (videoUrl) {
        let embedUrl = videoUrl;
        
        if (videoUrl.includes('youtube.com') || videoUrl.includes('youtu.be')) {
          const videoId = videoUrl.match(/(?:youtube\.com\/(?:[^\/]+\/.+\/|(?:v|e(?:mbed)?)\/|.*[?&]v=)|youtu\.be\/)([^"&?\/\s]{11})/);
          if (videoId) {
            embedUrl = `https://www.youtube.com/embed/${videoId[1]}?autoplay=1`;
          }
        }
        
        if (videoUrl.includes('vimeo.com')) {
          const videoId = videoUrl.match(/vimeo\.com\/(\d+)/);
          if (videoId) {
            embedUrl = `https://player.vimeo.com/video/${videoId[1]}?autoplay=1`;
          }
        }
        
        videoPlayerContainer.innerHTML = `<iframe class="video-player" src="${embedUrl}" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>`;
        videoModal.classList.add('active');
      }
    });
  });

  closeVideoModal.addEventListener('click', function() {
    videoModal.classList.remove('active');
    videoPlayerContainer.innerHTML = '';
  });

  videoModal.addEventListener('click', function(e) {
    if (e.target === videoModal) {
      videoModal.classList.remove('active');
      videoPlayerContainer.innerHTML = '';
    }
  });
</script>

