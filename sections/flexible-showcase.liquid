<style>
  .flexible-showcase {
    padding: var(--section-padding-block, 4rem) var(--section-padding-inline, 1.5rem);
    max-width: 1400px;
    margin: 0 auto;
  }

  .flexible-showcase__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .flexible-showcase__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 600;
    line-height: 1.2;
    margin: 0 0 1rem 0;
    color: var(--color-foreground, #000);
  }

  .flexible-showcase__subtitle {
    font-size: clamp(0.875rem, 2vw, 1rem);
    line-height: 1.6;
    color: var(--color-foreground-secondary, #666);
    max-width: 600px;
    margin: 0 auto;
  }

  .flexible-showcase__content {
    position: relative;
  }

  /* Desktop Layout */
  .flexible-showcase__images-wrapper {
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 1rem;
    overflow: hidden;
    display: none;
  }

  @media screen and (min-width: 750px) {
    .flexible-showcase__images-wrapper {
      display: block;
    }
  }



  .flexible-showcase__image-item {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .flexible-showcase__image-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .flexible-showcase__image-description {
    position: absolute;
    top: 34%;
    left: 44%;
    transform: translate(-50%, -50%);
    max-width: 80%;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    max-width: 370px;
    color: #FFF;
    text-align: right;
    font-size: 16px;
    font-weight: 400;
    line-height: 21px;
  }

  /* Mobile Layout */
  .flexible-showcase__mobile-wrapper {
    display: block;
  }

  @media screen and (min-width: 750px) {
    .flexible-showcase__mobile-wrapper {
      display: none;
    }
  }

  .flexible-showcase__mobile-image {
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 0.75rem;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .flexible-showcase__mobile-image:last-of-type {
    margin-bottom: 1.5rem;
  }

  .flexible-showcase__mobile-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .flexible-showcase__mobile-description {
    text-align: center;
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--color-foreground-secondary, #666);
    padding: 0 1rem;
  }

  /* Annotations for desktop images */
  .flexible-showcase__image-item--right {
    position: relative;
  }

  .flexible-showcase__annotation {
    position: absolute;
    font-size: 0.75rem;
    color: #000;
    font-weight: 500;
  }

  .flexible-showcase__annotation--boost {
    top: 15%;
    right: 5%;
  }

  .flexible-showcase__annotation--menu {
    bottom: 30%;
    right: 5%;
  }

  .flexible-showcase__annotation-line {
    width: 40px;
    height: 1px;
    background-color: #000;
    position: absolute;
  }

  .flexible-showcase__annotation--boost .flexible-showcase__annotation-line {
    top: 50%;
    right: -45px;
  }

  .flexible-showcase__annotation--menu .flexible-showcase__annotation-line {
    top: 50%;
    right: -45px;
  }
</style>

<div class="flexible-showcase">
  <div class="flexible-showcase__header">
    {% if section.settings.title != blank %}
      <h2 class="flexible-showcase__title">
        {{ section.settings.title }}
      </h2>
    {% endif %}
    
    {% if section.settings.subtitle != blank %}
      <p class="flexible-showcase__subtitle">
        {{ section.settings.subtitle }}
      </p>
    {% endif %}
  </div>

  <div class="flexible-showcase__content">
    {%- comment -%} Desktop Layout {%- endcomment -%}
    <div class="flexible-showcase__images-wrapper">
      <div class="flexible-showcase__image-item flexible-showcase__image-item--left">
        {% if section.settings.desktop_image != blank %}
          {{
            section.settings.desktop_image
            | image_url: width: 1400
            | image_tag: loading: 'lazy', alt: section.settings.desktop_image.alt
          }}
        {% else %}
          <div style="background: #f5f5f5; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
            <span style="color: #999;">Desktop Image</span>
          </div>
        {% endif %}
        
        {% if section.settings.desktop_description != blank %}
          <div class="flexible-showcase__image-description">
            {{ section.settings.desktop_description }}
          </div>
        {% endif %}
      </div>
    </div>

    {%- comment -%} Mobile Layout {%- endcomment -%}
    <div class="flexible-showcase__mobile-wrapper">
      <div class="flexible-showcase__mobile-image">
        {% if section.settings.mobile_image_1 != blank %}
          {{
            section.settings.mobile_image_1
            | image_url: width: 600
            | image_tag: loading: 'lazy', alt: section.settings.mobile_image_1.alt
          }}
        {% else %}
          <div style="background: #f5f5f5; padding: 4rem 2rem; text-align: center;">
            <span style="color: #999;">Mobile Image 1</span>
          </div>
        {% endif %}
      </div>

      <div class="flexible-showcase__mobile-image">
        {% if section.settings.mobile_image_2 != blank %}
          {{
            section.settings.mobile_image_2
            | image_url: width: 600
            | image_tag: loading: 'lazy', alt: section.settings.mobile_image_2.alt
          }}
        {% else %}
          <div style="background: #f5f5f5; padding: 4rem 2rem; text-align: center;">
            <span style="color: #999;">Mobile Image 2</span>
          </div>
        {% endif %}
      </div>

      {% if section.settings.mobile_description != blank %}
        <div class="flexible-showcase__mobile-description">
          {{ section.settings.mobile_description }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Flexible Showcase",
  "tag": "section",
  "class": "section-flexible-showcase",
  "settings": [
    {
      "type": "header",
      "content": "Header Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Flexible. Exquisite."
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Flexible installation, exquisite design, durable and in line with the operation habits of the British people"
    },
    {
      "type": "header",
      "content": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "textarea",
      "id": "desktop_description",
      "label": "Desktop Description (Overlay Text)",
      "info": "This text will appear on top of the image on desktop"
    },
    {
      "type": "header",
      "content": "Mobile Images & Content"
    },
    {
      "type": "image_picker",
      "id": "mobile_image_1",
      "label": "Mobile Image 1"
    },
    {
      "type": "image_picker",
      "id": "mobile_image_2",
      "label": "Mobile Image 2"
    },
    {
      "type": "textarea",
      "id": "mobile_description",
      "label": "Mobile Description",
      "info": "This text will appear below the images on mobile"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 64
    }
  ],
  "presets": [
    {
      "name": "Flexible Showcase"
    }
  ]
}
{% endschema %}

