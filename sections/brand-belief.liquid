{% liquid
  assign section_id = section.id
%}

<style>
  .brand-belief-{{ section_id }} {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .brand-belief-{{ section_id }} {
      padding: {{ section.settings.padding_top_desktop }}px 0 {{ section.settings.padding_bottom_desktop }}px;
    }
  }

  .brand-belief-{{ section_id }}__container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  @media screen and (min-width: 750px) {
    .brand-belief-{{ section_id }}__container {
      padding: 0 40px;
    }
  }

  .brand-belief-{{ section_id }}__header {
    text-align: center;
    margin-bottom: {{ section.settings.header_margin_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .brand-belief-{{ section_id }}__header {
      margin-bottom: {{ section.settings.header_margin_desktop }}px;
    }
  }

  .brand-belief-{{ section_id }}__title {
    font-size: {{ section.settings.title_size_mobile }}px;
    font-weight: {{ section.settings.title_weight }};
    line-height: {{ section.settings.title_line_height }};
    color: {{ section.settings.title_color }};
    margin: 0 0 {{ section.settings.subtitle_gap_mobile }}px 0;
  }

  @media screen and (min-width: 750px) {
    .brand-belief-{{ section_id }}__title {
      font-size: {{ section.settings.title_size_desktop }}px;
      margin-bottom: {{ section.settings.subtitle_gap_desktop }}px;
    }
  }

  .brand-belief-{{ section_id }}__subtitles {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.subtitle_line_gap_mobile }}px;
    max-width: 400px;
    margin: 0 auto;
    text-align: left;
  }

  @media screen and (min-width: 750px) {
    .brand-belief-{{ section_id }}__subtitles {
      gap: {{ section.settings.subtitle_line_gap_desktop }}px;
    }
  }

  .brand-belief-{{ section_id }}__subtitle {
    font-size: {{ section.settings.subtitle_size_mobile }}px;
    font-weight: {{ section.settings.subtitle_weight }};
    line-height: {{ section.settings.subtitle_line_height }};
    color: {{ section.settings.subtitle_color }};
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .brand-belief-{{ section_id }}__subtitle {
      font-size: {{ section.settings.subtitle_size_desktop }}px;
    }
  }

  .brand-belief-{{ section_id }}__images-wrapper {
    margin-bottom: {{ section.settings.footer_gap_mobile }}px;
    overflow: hidden;
  }

  @media screen and (min-width: 750px) {
    .brand-belief-{{ section_id }}__images-wrapper {
      margin-bottom: {{ section.settings.footer_gap_desktop }}px;
    }
  }

  /* Desktop Grid Layout */
  .brand-belief-{{ section_id }}__images {
    display: none;
  }

  @media screen and (min-width: 750px) {
    .brand-belief-{{ section_id }}__images {
      display: grid;
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      gap: {{ section.settings.image_gap_desktop }}px;
      justify-items: center;
    }
  }

  .brand-belief-{{ section_id }}__image-item {
    width: 100%;
    background-color: {{ section.settings.image_placeholder_color }};
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .brand-belief-{{ section_id }}__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .brand-belief-{{ section_id }}__image-placeholder {
    width: 100%;
    height: 100%;
    display: block;
  }

  /* Mobile Slider */
  .brand-belief-{{ section_id }}__slider {
    display: block;
    position: relative;
    overflow: hidden;
    padding: 0 20px;
    margin: 0 -20px;
  }

  @media screen and (min-width: 750px) {
    .brand-belief-{{ section_id }}__slider {
      display: none;
    }
  }

  .brand-belief-{{ section_id }}__slider-track {
    display: flex;
    gap: {{ section.settings.image_gap_mobile }}px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 0 20px;
  }

  .brand-belief-{{ section_id }}__slider-track::-webkit-scrollbar {
    display: none;
  }

  .brand-belief-{{ section_id }}__slider-item {
    flex: 0 0 calc((100% - {{ section.settings.image_gap_mobile }}px * 0.3) / 1.3);
    scroll-snap-align: start;
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
    background-color: {{ section.settings.image_placeholder_color }};
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .brand-belief-{{ section_id }}__footer {
    text-align: center;
    max-width: {{ section.settings.footer_max_width }}px;
    margin: 0 auto;
  }

  .brand-belief-{{ section_id }}__footer-text {
    font-size: {{ section.settings.footer_size_mobile }}px;
    font-weight: {{ section.settings.footer_weight }};
    line-height: {{ section.settings.footer_line_height }};
    color: {{ section.settings.footer_color }};
    margin: 0;
    white-space: pre-line;
  }

  @media screen and (min-width: 750px) {
    .brand-belief-{{ section_id }}__footer-text {
      font-size: {{ section.settings.footer_size_desktop }}px;
    }
  }

  @media screen and (max-width: 750px) {

  .brand-belief-{{ section_id }}__container {

    padding: 0 40px;
  }
  }
</style>

<div class="brand-belief-{{ section_id }}">
  <div class="brand-belief-{{ section_id }}__container">
    
    <div class="brand-belief-{{ section_id }}__header">
      {%- if section.settings.title != blank -%}
        <h2 class="brand-belief-{{ section_id }}__title">
          {{ section.settings.title }}
        </h2>
      {%- endif -%}

      {%- if section.settings.subtitle_1 != blank or section.settings.subtitle_2 != blank or section.settings.subtitle_3 != blank or section.settings.subtitle_4 != blank -%}
        <div class="brand-belief-{{ section_id }}__subtitles">
          {%- if section.settings.subtitle_1 != blank -%}
            <p class="brand-belief-{{ section_id }}__subtitle">{{ section.settings.subtitle_1 }}</p>
          {%- endif -%}
          {%- if section.settings.subtitle_2 != blank -%}
            <p class="brand-belief-{{ section_id }}__subtitle">{{ section.settings.subtitle_2 }}</p>
          {%- endif -%}
          {%- if section.settings.subtitle_3 != blank -%}
            <p class="brand-belief-{{ section_id }}__subtitle">{{ section.settings.subtitle_3 }}</p>
          {%- endif -%}
          {%- if section.settings.subtitle_4 != blank -%}
            <p class="brand-belief-{{ section_id }}__subtitle">{{ section.settings.subtitle_4 }}</p>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>

    {%- if section.blocks.size > 0 -%}
      <div class="brand-belief-{{ section_id }}__images-wrapper">
        
        <div class="brand-belief-{{ section_id }}__images">
          {%- for block in section.blocks -%}
            <div class="brand-belief-{{ section_id }}__image-item" {{ block.shopify_attributes }}>
              {%- if block.settings.image != blank -%}
                {%- assign image_class = 'brand-belief-' | append: section_id | append: '__image' -%}
                <img
                  src="{{ block.settings.image | image_url: width: 800 }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  class="{{ image_class }}"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}">
              {%- else -%}
                <div class="brand-belief-{{ section_id }}__image-placeholder"></div>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>

        {%- comment -%} Mobile Slider {%- endcomment -%}
        <div class="brand-belief-{{ section_id }}__slider">
          <div class="brand-belief-{{ section_id }}__slider-track">
            {%- for block in section.blocks -%}
              <div class="brand-belief-{{ section_id }}__slider-item" {{ block.shopify_attributes }}>
                {%- if block.settings.image != blank -%}
                  {%- assign image_class = 'brand-belief-' | append: section_id | append: '__image' -%}
                  <img
                    src="{{ block.settings.image | image_url: width: 600 }}"
                    alt="{{ block.settings.image.alt | escape }}"
                    class="{{ image_class }}"
                    loading="lazy"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.height }}">
                {%- else -%}
                  <div class="brand-belief-{{ section_id }}__image-placeholder"></div>
                {%- endif -%}
              </div>
            {%- endfor -%}
          </div>
        </div>

      </div>
    {%- endif -%}

    {%- comment -%} Footer Section {%- endcomment -%}
    {%- if section.settings.footer_text != blank -%}
      <div class="brand-belief-{{ section_id }}__footer">
        <p class="brand-belief-{{ section_id }}__footer-text">
          {{ section.settings.footer_text }}
        </p>
      </div>
    {%- endif -%}

  </div>
</div>

