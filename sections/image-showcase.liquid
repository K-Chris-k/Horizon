

<style>
  .image-showcase {
    background-color: {{ section.settings.background_color }};
    padding: 60px 20px;
  }

  .image-showcase__container {
    max-width: 800px;
    margin: 0 auto;
  }

  .image-showcase__header {
    text-align: center;
    margin-bottom: 40px;
  }

  .image-showcase__title {
    font-size: {{ section.settings.title_font_size_desktop }}px;
    font-weight: {{ section.settings.title_font_weight }};
    line-height: {{ section.settings.title_line_height_desktop }};
    color: {{ section.settings.title_color }};
    margin: 0 0 20px 0;
    padding: 0 20px;
    max-width: 680px;
    margin: 0 auto;
  }

  .image-showcase__description {
    font-size: {{ section.settings.description_font_size_desktop }}px;
    line-height: {{ section.settings.description_line_height_desktop }};
    color: {{ section.settings.description_color }};
    margin: 0 auto 50px;
    max-width: 600px;
    padding: 0 20px;
  }

  .image-showcase__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
    padding: 0 30px;
  }

  .image-showcase__item {
    position: relative;
    width: 100%;
  }

  .image-showcase__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 130%;
    overflow: hidden;
    background-color: #d3d3d3;
    border-radius: 4px;
  }

  .image-showcase__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-showcase__item-title {
    font-size: {{ section.settings.item_title_font_size }}px;
    font-weight: {{ section.settings.item_title_font_weight }};
    color: {{ section.settings.item_title_color }};
    line-height: {{ section.settings.item_title_line_height }};
    margin-top: 15px;
    text-align: center;
  }

  .image-showcase__item-description {
    font-size: {{ section.settings.item_description_font_size }}px;
    color: {{ section.settings.item_description_color }};
    line-height: {{ section.settings.item_description_line_height }};
    margin-top: 8px;
    text-align: center;
  }

  /* Mobile Styles */
  @media screen and (max-width: 768px) {
    .image-showcase {
      padding: 40px 15px;
    }

    .image-showcase__title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      line-height: {{ section.settings.title_line_height_mobile }};
      margin-bottom: 15px;
    }

    .image-showcase__description {
      font-size: {{ section.settings.description_font_size_mobile }}px;
      line-height: {{ section.settings.description_line_height_mobile }};
      margin-bottom: 35px;
    }

    .image-showcase__grid {
      grid-template-columns: 1fr;
      gap: 40px;
      max-width: 400px;
      margin: 0 auto;
    }

    .image-showcase__image-wrapper {
      padding-bottom: 120%;
    }
  }

  @media screen and (min-width: 769px) and (max-width: 1024px) {
    .image-showcase__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 25px;
    }
  }
</style>

<section class="image-showcase">
  <div class="image-showcase__container">
    {% if section.settings.title != blank or section.settings.description != blank %}
      <div class="image-showcase__header">
        {% if section.settings.title != blank %}
          <h2 class="image-showcase__title">
            {{ section.settings.title }}
          </h2>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <div class="image-showcase__description">
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="image-showcase__grid">
        {% for block in section.blocks %}
          <div class="image-showcase__item" {{ block.shopify_attributes }}>
            <div class="image-showcase__image-wrapper">
              {% if block.settings.image != blank %}
                <img
                  src="{{ block.settings.image | image_url: width: 600 }}"
                  srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                          {{ block.settings.image | image_url: width: 600 }} 600w,
                          {{ block.settings.image | image_url: width: 800 }} 800w"
                  sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  alt="{{ block.settings.image.alt | escape }}"
                  class="image-showcase__image"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'image-showcase__image' }}
              {% endif %}
            </div>
            
            {% if block.settings.item_title != blank %}
              <h3 class="image-showcase__item-title">
                {{ block.settings.item_title }}
              </h3>
            {% endif %}
            
            {% if block.settings.item_description != blank %}
              <div class="image-showcase__item-description">
                {{ block.settings.item_description }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

