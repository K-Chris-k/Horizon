{{ 'base.css' | asset_url | stylesheet_tag }}

<style>
  .image-showcase {
    background-color: #ffffff;
    padding: 60px 20px;
  }

  .image-showcase__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .image-showcase__header {
    text-align: center;
    margin-bottom: 40px;
  }

  .image-showcase__title {
    font-size: 32px;
    font-weight: 400;
    line-height: 1.4;
    color: #333333;
    margin: 0 0 20px 0;
    padding: 0 20px;
  }

  .image-showcase__description {
    font-size: 14px;
    line-height: 1.6;
    color: #666666;
    margin: 0 auto 50px;
    max-width: 600px;
    padding: 0 20px;
  }

  .image-showcase__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    padding: 0 20px;
  }

  .image-showcase__item {
    position: relative;
    width: 100%;
  }

  .image-showcase__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 130%;
    overflow: hidden;
    background-color: #d3d3d3;
    border-radius: 4px;
  }

  .image-showcase__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-showcase__item-title {
    font-size: 16px;
    font-weight: 500;
    color: #333333;
    margin-top: 15px;
    text-align: center;
  }

  .image-showcase__item-description {
    font-size: 14px;
    color: #666666;
    margin-top: 8px;
    text-align: center;
    line-height: 1.5;
  }

  /* Mobile Styles */
  @media screen and (max-width: 768px) {
    .image-showcase {
      padding: 40px 15px;
    }

    .image-showcase__title {
      font-size: 24px;
      margin-bottom: 15px;
    }

    .image-showcase__description {
      font-size: 13px;
      margin-bottom: 35px;
    }

    .image-showcase__grid {
      grid-template-columns: 1fr;
      gap: 40px;
      max-width: 400px;
      margin: 0 auto;
    }

    .image-showcase__image-wrapper {
      padding-bottom: 120%;
    }
  }

  @media screen and (min-width: 769px) and (max-width: 1024px) {
    .image-showcase__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 25px;
    }
  }
</style>

<section class="image-showcase">
  <div class="image-showcase__container">
    {% if section.settings.title != blank or section.settings.description != blank %}
      <div class="image-showcase__header">
        {% if section.settings.title != blank %}
          <h2 class="image-showcase__title">
            {{ section.settings.title }}
          </h2>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <div class="image-showcase__description">
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="image-showcase__grid">
        {% for block in section.blocks %}
          <div class="image-showcase__item" {{ block.shopify_attributes }}>
            <div class="image-showcase__image-wrapper">
              {% if block.settings.image != blank %}
                <img
                  src="{{ block.settings.image | image_url: width: 600 }}"
                  srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                          {{ block.settings.image | image_url: width: 600 }} 600w,
                          {{ block.settings.image | image_url: width: 800 }} 800w"
                  sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  alt="{{ block.settings.image.alt | escape }}"
                  class="image-showcase__image"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'image-showcase__image' }}
              {% endif %}
            </div>
            
            {% if block.settings.item_title != blank %}
              <h3 class="image-showcase__item-title">
                {{ block.settings.item_title }}
              </h3>
            {% endif %}
            
            {% if block.settings.item_description != blank %}
              <div class="image-showcase__item-description">
                {{ block.settings.item_description }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Image Showcase",
  "tag": "section",
  "class": "section-image-showcase",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "What you long for is not merely intelligence but designs that carry stories are rich in spirit and stand the test of time"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "The raw and unrestrained spirit from the garage, the weightlessness and precision of industry, and the hardcore aesthetics integrated into modern life."
    }
  ],
  "blocks": [
    {
      "type": "showcase_image",
      "name": "Image Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "item_title",
          "label": "Item Title"
        },
        {
          "type": "textarea",
          "id": "item_description",
          "label": "Item Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Showcase",
      "blocks": [
        {
          "type": "showcase_image"
        },
        {
          "type": "showcase_image"
        },
        {
          "type": "showcase_image"
        }
      ]
    }
  ]
}
{% endschema %}

