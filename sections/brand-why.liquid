<div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="brand-why__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="brand-why__images">
      {% if section.settings.image_desktop_1 != blank or section.settings.image_mobile_1 != blank %}
        <div class="brand-why__image-wrapper">
          <picture>
            {% if section.settings.image_mobile_1 != blank %}
              <source 
                media="(max-width: 749px)" 
                srcset="{{ section.settings.image_mobile_1 | image_url: width: 750 }}"
              >
            {% endif %}
            {% if section.settings.image_desktop_1 != blank %}
              <img
                src="{{ section.settings.image_desktop_1 | image_url: width: 800 }}"
                srcset="{{ section.settings.image_desktop_1 | image_url: width: 400 }} 400w,
                        {{ section.settings.image_desktop_1 | image_url: width: 600 }} 600w,
                        {{ section.settings.image_desktop_1 | image_url: width: 800 }} 800w,
                        {{ section.settings.image_desktop_1 | image_url: width: 1000 }} 1000w"
                alt="{{ section.settings.image_desktop_1.alt | escape }}"
                loading="lazy"
                width="{{ section.settings.image_desktop_1.width }}"
                height="{{ section.settings.image_desktop_1.height }}"
              >
            {% else %}
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </picture>
        </div>
      {% endif %}

      {% if section.settings.image_desktop_2 != blank or section.settings.image_mobile_2 != blank %}
        <div class="brand-why__image-wrapper">
          <picture>
            {% if section.settings.image_mobile_2 != blank %}
              <source 
                media="(max-width: 749px)" 
                srcset="{{ section.settings.image_mobile_2 | image_url: width: 750 }}"
              >
            {% endif %}
            {% if section.settings.image_desktop_2 != blank %}
              <img
                src="{{ section.settings.image_desktop_2 | image_url: width: 800 }}"
                srcset="{{ section.settings.image_desktop_2 | image_url: width: 400 }} 400w,
                        {{ section.settings.image_desktop_2 | image_url: width: 600 }} 600w,
                        {{ section.settings.image_desktop_2 | image_url: width: 800 }} 800w,
                        {{ section.settings.image_desktop_2 | image_url: width: 1000 }} 1000w"
                alt="{{ section.settings.image_desktop_2.alt | escape }}"
                loading="lazy"
                width="{{ section.settings.image_desktop_2.width }}"
                height="{{ section.settings.image_desktop_2.height }}"
              >
            {% else %}
              {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </picture>
        </div>
      {% endif %}
    </div>

    <div class="brand-why__content">
      {% if section.settings.description != blank %}
        <div class="brand-why__description">{{ section.settings.description }}</div>
      {% endif %}

      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link | default: '#' }}" class="brand-why__button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>

