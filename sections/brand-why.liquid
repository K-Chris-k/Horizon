{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --heading-font-size-desktop: {{ section.settings.heading_size_desktop }}px;
    --heading-line-height-desktop: {{ section.settings.heading_line_height_desktop }};
    --heading-font-size-mobile: {{ section.settings.heading_size_mobile }}px;
    --heading-line-height-mobile: {{ section.settings.heading_line_height_mobile }};
    --description-font-size-desktop: {{ section.settings.description_size_desktop }}px;
    --description-line-height-desktop: {{ section.settings.description_line_height_desktop }};
    --description-font-size-mobile: {{ section.settings.description_size_mobile }}px;
    --description-line-height-mobile: {{ section.settings.description_line_height_mobile }};
    --button-font-size-desktop: {{ section.settings.button_size_desktop }}px;
    --button-font-size-mobile: {{ section.settings.button_size_mobile }}px;
    --image-gap: {{ section.settings.image_gap }}px;
    --image-gap-mobile: {{ section.settings.image_gap_mobile }}px;
    --image-height-difference: {{ section.settings.image_height_difference }}px;
  }

  .section-brand-why-section {
    padding-top: var(--section-padding-top);
    padding-bottom: var(--section-padding-bottom);
    background-color: {{ section.settings.background_color }};
  }

  .section-brand-why-section .page-width {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .brand-why__heading {
    font-size: var(--heading-font-size-mobile);
    line-height: var(--heading-line-height-mobile);
    font-weight: {{ section.settings.heading_weight }};
    letter-spacing: {{ section.settings.heading_letter_spacing }}em;
    text-transform: {{ section.settings.heading_transform }};
    margin: 0px;
    color: {{ section.settings.heading_color }};
  }

  .brand-why__images {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--image-gap-mobile);
    margin-bottom: {{ section.settings.content_spacing_mobile }}px;
  }

  .brand-why__image-wrapper {
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  .brand-why__image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }


  .brand-why__description {
    font-size: var(--description-font-size-mobile);
    line-height: var(--description-line-height-mobile);
    color: {{ section.settings.description_color }};
    max-width: {{ section.settings.description_max_width }}px;
    margin-right: auto;
  }

  .brand-why__content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .brand-why__button {
    display: inline-block;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    font-size: var(--button-font-size-mobile);
    font-weight: {{ section.settings.button_weight }};
    color: {{ section.settings.button_text_color }};
    background-color: {{ section.settings.button_bg_color }};
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    margin-top:35px;
  }

  .brand-why__button:hover {
    background-color: {{ section.settings.button_bg_color_hover }};
    color: {{ section.settings.button_text_color_hover }};
    border-color: {{ section.settings.button_border_color_hover }};
  }

  @media screen and (min-width: 750px) {
    .brand-why__heading {
      font-size: var(--heading-font-size-desktop);
      line-height: var(--heading-line-height-desktop);
    }

    .brand-why__images {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--image-gap);
      margin-bottom: {{ section.settings.content_spacing_desktop }}px;
      align-items: {{ section.settings.images_vertical_align }};
    }

    .brand-why__image-wrapper:first-child {
      margin-top: var(--image-height-difference);
    }


    .brand-why__description {
      font-size: var(--description-font-size-desktop);
      line-height: var(--description-line-height-desktop);
    }

    .brand-why__button {
      font-size: var(--button-font-size-desktop);
    }
  }

  @media screen and (min-width: 990px) {
    .brand-why__images {
      {% if section.settings.desktop_layout == 'asymmetric' %}
        grid-template-columns: {{ section.settings.image_ratio_left }}fr {{ section.settings.image_ratio_right }}fr;
      {% endif %}
    }
  }
  @media screen and (max-width: 750px) {
    .section-brand-why-section .page-width {

    padding: 0 40px;
}h2.brand-why__heading {
