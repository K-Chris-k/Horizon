/* Apply Custom Fonts Based on Theme Settings */
/* The main font variables are now set in snippets/theme-styles-variables.liquid */

/* Additional specificity for HTML tags to ensure font application */
{% if settings.use_custom_font_body %}
*:not(h1):not(h2):not(h3):not(h4):not(h5):not(h6):not(.h1):not(.h2):not(.h3):not(.h4):not(.h5):not(.h6) {
  font-family: 'Bai Jamjuree', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif !important;
}
{% endif %}

{% if settings.use_custom_font_heading %}
h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6 {
  font-family: 'Bai Jamjuree', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif !important;
}
{% endif %}

