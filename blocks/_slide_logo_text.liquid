{%- style -%}
  ._slide_logo_text-container {
    color: {{ block.settings.text_color | default: '#ffffff' }};
    display: flex;
    align-items: center;
    justify-content: left;
    min-height: 200px;
  }

  ._slide_logo_text-content {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-family: 'Arial', sans-serif;
  }

  ._slide_logo_text-bracket {
    font-size: 2rem;
    font-weight: normal;
  }

  ._slide_logo_text-logo {
    width: auto;
  }

  ._slide_logo_text-text {
    font-size: 1.2rem;
    font-weight: bold;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    ._slide_logo_text-container{
      min-height: max-content;
    }
    ._slide_logo_text-content {
      gap: 0.5rem;
    }

    ._slide_logo_text-bracket {
      display:none;
    }

    ._slide_logo_text-text {
      font-size: 1rem;
    }
    ._slide_logo_text-logo {
      max-width: 200px;
      width: 180px;
    }
  }
  @media screen and (max-width:1370px) {
    ._slide-dot {
      display: none !important;
    }
  }
{%- endstyle -%}
{% assign image = block.settings.logo_image %}
{% liquid
  assign media_width_desktop = '100vw'
  assign media_width_mobile = '100vw'
  assign sizes = 'auto, (min-width: 750px) ' | append: media_width_desktop | append: ', ' | append: media_width_mobile
  assign widths = '240, 352, 832, 1200, 1600, 1920, 2560'
%}
<div class="_slide_logo_text-container w100">
  <div class="_slide_logo_text-content w100">
    <span class="_slide_logo_text-bracket">「 <span class="_slide-dot">.</span> </span>
    <div class="_slide_logo_text-logo">
      {% if block.settings.logo_image %}
        {{
          image
          | image_url: width: 2560
          | image_tag: widths: widths, sizes: sizes, loading: 'lazy', style: 'height: auto; max-width: 100%;'
        }}
      {% endif %}
    </div>
    <span class="_slide_logo_text-text">
      {{- block.settings.text_content | default: 'BORN HERE ' -}}
      <span class="_slide-dot">&nbsp;.</span></span
    >
    <span class="_slide_logo_text-bracket">」</span>
  </div>
</div>
{% schema %}
{
  "name": "logo Text",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "text_content",
      "label": "Text Content",
      "default": "BORN HERE ."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "logo Text"
    }
  ]
}
{% endschema %}
