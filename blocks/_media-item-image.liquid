{%- comment -%}
  这个文件只存储数据,不做渲染
  只输出 JSON 格式的图片数据
{%- endcomment -%}
{%- liquid
  assign block_settings = block.settings
-%}
{%- if block_settings.image != blank -%}
  {"url":"{{ block_settings.image | image_url }}","alt":"
  {{- block_settings.image.alt | escape | replace: '"', '\\"' -}}
  ","width":{{ block_settings.image.width }},"height":{{ block_settings.image.height }}}
{%- endif -%}
{% schema %}
{
  "name": "flow box media image",
  "tag": null,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "图片"
    },
    {
      "type": "url",
      "id": "link",
      "label": "链接"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "替代文本"
    }
  ],
  "presets": [
    {
      "name": "flow box media image"
    }
  ]
}
{% endschema %}
