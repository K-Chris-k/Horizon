

{% assign button_collection = closest.collection %}
{% assign button_url = button_collection.url %}

{% if button_collection.products_count > section.settings.max_products %}
  {% render 'button', 
    link: button_url,
    custom_bg_color: block.settings.custom_bg_color,
    custom_text_color: block.settings.custom_text_color,
    custom_border_color: block.settings.custom_border_color,
    custom_border_width: block.settings.custom_border_width,
    custom_border_radius: block.settings.custom_border_radius,
    custom_hover_bg_color: block.settings.custom_hover_bg_color,
    custom_hover_text_color: block.settings.custom_hover_text_color,
    custom_hover_border_color: block.settings.custom_hover_border_color
  %}
{% endif %}

{% schema %}
{
  "name": "t:names.product_list_button",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "t:content.visible_if_collection_has_more_products"
    },
    {
      "type": "text",
      "id": "label",
      "label": "t:settings.label",
      "default": "t:text_defaults.button_label"
    },
    {
      "type": "checkbox",
      "id": "open_in_new_tab",
      "label": "t:settings.open_new_tab",
      "default": false
    },
    {
      "type": "select",
      "id": "style_class",
      "label": "t:settings.style",
      "options": [
        {
          "value": "button",
          "label": "t:options.primary"
        },
        {
          "value": "button-secondary",
          "label": "t:options.secondary"
        },
        {
          "value": "link",
          "label": "t:options.link"
        }
      ],
      "default": "button"
    },
    {
      "type": "header",
      "content": "t:content.size"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:settings.width_desktop",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit_content"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "fit-content"
    },
    {
      "type": "range",
      "id": "custom_width",
      "label": "t:settings.custom_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100,
      "visible_if": "{{ block.settings.width == \"custom\" }}"
    },
    {
      "type": "select",
      "id": "width_mobile",
      "label": "t:settings.width_mobile",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit_content"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "fit-content"
    },
    {
      "type": "range",
      "id": "custom_width_mobile",
      "label": "t:settings.custom_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100,
      "visible_if": "{{ block.settings.width_mobile == \"custom\" }}"
    },
    {
      "type": "header",
      "content": "Custom Styles"
    },
    {
      "type": "checkbox",
      "id": "enable_custom_styles",
      "label": "Enable Custom Styles",
      "default": false,
      "info": "Enable custom colors and borders for this button"
    },
    {
      "type": "color",
      "id": "custom_bg_color",
      "label": "Background Color",
      "visible_if": "{{ block.settings.enable_custom_styles }}"
    },
    {
      "type": "color",
      "id": "custom_text_color",
      "label": "Text Color",
      "visible_if": "{{ block.settings.enable_custom_styles }}"
    },
    {
      "type": "color",
      "id": "custom_border_color",
      "label": "Border Color",
      "visible_if": "{{ block.settings.enable_custom_styles }}"
    },
    {
      "type": "range",
      "id": "custom_border_width",
      "label": "Border Width",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px",
      "default": 0,
      "visible_if": "{{ block.settings.enable_custom_styles }}"
    },
    {
      "type": "range",
      "id": "custom_border_radius",
      "label": "Border Radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 4,
      "visible_if": "{{ block.settings.enable_custom_styles }}"
    },
    {
      "type": "header",
      "content": "Hover Styles"
    },
    {
      "type": "color",
      "id": "custom_hover_bg_color",
      "label": "Hover Background Color",
      "visible_if": "{{ block.settings.enable_custom_styles }}"
    },
    {
      "type": "color",
      "id": "custom_hover_text_color",
      "label": "Hover Text Color",
      "visible_if": "{{ block.settings.enable_custom_styles }}"
    },
    {
      "type": "color",
      "id": "custom_hover_border_color",
      "label": "Hover Border Color",
      "visible_if": "{{ block.settings.enable_custom_styles }}"
    }
  ],
  "presets": [
    {
      "name": "t:names.product_list_button",
      "category": "t:categories.collection",
      "settings": {
        "label": "View all",
        "style_class": "button-secondary"
      }
    }
  ]
}
{% endschema %}
